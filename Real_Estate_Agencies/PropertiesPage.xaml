<Page x:Class="Real_Estate_Agencies.PropertiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PropertiesPage"
      Background="#F8FAFC">

    <Page.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>
        <SolidColorBrush x:Key="PastelBlue" Color="#A7C7E7"/>
        <SolidColorBrush x:Key="PastelYellow" Color="#FFF9B1"/>

        <!-- Header text -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Cell text -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Circular button -->
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Add button -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Form input styles -->
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="{StaticResource Gray200}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="🔍" FontSize="14" Margin="12,0,8,0" VerticalAlignment="Center" Foreground="{StaticResource Gray400}"/>
                        <TextBox Grid.Column="1" x:Name="SearchTextBox" 
                                 Background="Transparent" BorderThickness="0" 
                                 FontSize="14" Padding="0,12"
                                 VerticalAlignment="Center" Foreground="{StaticResource Gray800}"/>
                        <TextBlock Grid.Column="1" Text="Search properties..." x:Name="PlaceholderText"
                                   Foreground="{StaticResource Gray400}" IsHitTestVisible="False" 
                                   VerticalAlignment="Center" Margin="0,12"/>
                    </Grid>
                </Border>

                <!-- Add -->
                <Button Grid.Column="1" Content="+ Add Property" Style="{StaticResource AddButtonStyle}" 
                        Click="Add_Click" Margin="16,0,0,0"/>
            </Grid>

            <!-- Table -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="{StaticResource Gray50}" 
                        CornerRadius="8,8,0,0" 
                        BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0"
                        Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="0.7*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Name" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="Location" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="2" Text="Type" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="3" Text="Category" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="4" Text="Price" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="5" Text="Action" Style="{StaticResource HeaderTextStyle}"/>
                    </Grid>
                </Border>

                <!-- Property list -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Border CornerRadius="0,0,8,8" BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1">
                        <ItemsControl ItemsSource="{Binding Properties}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="{StaticResource Gray100}" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="0.7*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding Name}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Location}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding PropertyType}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Category}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="4" Text="{Binding Price}" Style="{StaticResource CellTextStyle}"/>

                                            <!-- Actions (View, Edit, Delete) -->
                                            <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource CircularIconButtonStyle}" 
                                                        ToolTip="View" Click="View_Click"
                                                        CommandParameter="{Binding}">
                                                    <TextBlock Text="👁️" FontSize="12"/>
                                                </Button>
                                                <Button Style="{StaticResource CircularIconButtonStyle}" 
                                                        ToolTip="Edit" Click="Edit_Click"
                                                        CommandParameter="{Binding}" Margin="4,0,0,0">
                                                    <TextBlock Text="✏️" FontSize="12"/>
                                                </Button>
                                                <Button Style="{StaticResource CircularIconButtonStyle}" 
                                                        ToolTip="Delete" Click="Delete_Click"
                                                        CommandParameter="{Binding}" Margin="4,0,0,0">
                                                    <TextBlock Text="🗑️" FontSize="12"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </ScrollViewer>
            </Grid>

            <!-- Pagination -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Showing 1-2 of properties"
                           VerticalAlignment="Center" Foreground="{StaticResource Gray600}" 
                           FontSize="12" HorizontalAlignment="Left"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="1" Background="{StaticResource PrimaryBlue}" Foreground="White"
                            Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                </StackPanel>
            </Grid>

            <!-- View Property Overlay Popup -->
            <Grid x:Name="PopupOverlay"
                  Background="#80000000"
                  Visibility="Collapsed"
                  Grid.RowSpan="3">

                <!-- Frosted Popup -->
                <Border CornerRadius="12" Width="460"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        BorderBrush="{StaticResource PastelBlue}" BorderThickness="2">

                    <!-- Frosted Pastel Background -->
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#CCB3D9FF" Offset="0"/>
                            <!-- pastel blue -->
                            <GradientStop Color="#CCFFF7B3" Offset="1"/>
                            <!-- pastel yellow -->
                        </LinearGradientBrush>
                    </Border.Background>

                    <!-- Shadow -->
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>

                    <!-- Popup Content -->
                    <StackPanel>

                        <!-- Top Bar -->
                        <DockPanel Background="{StaticResource PastelBlue}" Height="40" LastChildFill="False">
                            <TextBlock Text="Property Details"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="12,0,0,0"/>
                            <Button Content="✕"
                                    Width="40" Height="40"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    DockPanel.Dock="Right"
                                    FontSize="16"
                                    Cursor="Hand"
                                    Click="ClosePopup_Click"/>
                        </DockPanel>

                        <!-- Content -->
                        <Border Padding="20" HorizontalAlignment="Center">
                            <StackPanel>

                                <!-- Image -->
                                <Border Background="{StaticResource Gray100}" CornerRadius="8" Padding="4" Margin="0,0,0,12">
                                    <Image Source="{Binding SelectedProperty.ImagePath}" 
                                           Height="220" Stretch="UniformToFill" Width="400"/>
                                </Border>

                                <!-- Title -->
                                <TextBlock Text="{Binding SelectedProperty.Name}" 
                                           FontSize="20" FontWeight="Bold" 
                                           Foreground="#1E90FF"  
                                           TextAlignment="Center" Margin="0,0,0,12"/>

                                <!-- Details -->
                                <StackPanel>
                                    <TextBlock Text="{Binding SelectedProperty.Location}" 
                                               FontSize="14" Foreground="#333333" 
                                               TextAlignment="Center" Margin="0,2"/>
                                    <TextBlock Text="{Binding SelectedProperty.PropertyType}" 
                                               FontSize="14" Foreground="#444444" 
                                               TextAlignment="Center" Margin="0,2"/>
                                    <TextBlock Text="{Binding SelectedProperty.Category}" 
                                               FontSize="14" Foreground="#444444" 
                                               TextAlignment="Center" Margin="0,2"/>
                                    <TextBlock Text="{Binding SelectedProperty.Price, StringFormat='₱{0:N2}'}" 
                                               FontSize="16" FontWeight="SemiBold" 
                                               Foreground="#D97706"   
                                               TextAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>

                                <!-- Bottom Close Button -->
                                <Button Content="Close"
                                        Background="#4A90E2"   
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="12,6"
                                        Margin="0,16,0,0"
                                        FontWeight="SemiBold"
                                        Width="100"
                                        HorizontalAlignment="Center"
                                        Cursor="Hand"
                                        Click="ClosePopup_Click"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Border>
            </Grid>

            <!-- Edit Property Overlay Popup -->
            <Grid x:Name="EditPopupOverlay"
                  Background="#80000000"
                  Visibility="Collapsed"
                  Grid.RowSpan="3">

                <!-- Clean White Popup -->
                <Border CornerRadius="16" Width="500" MaxHeight="600"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Background="White"
                        BorderThickness="0"
                        Padding="32">

                    <!-- Shadow -->
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.1"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Close Button -->
                        <Button Content="✕"
                                Width="24" Height="24"
                                Background="Transparent"
                                Foreground="{StaticResource Gray400}"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Cursor="Hand"
                                Click="CloseEditPopup_Click"
                                Grid.Row="0"
                                Margin="0,-8,-8,0"/>

                        <!-- Title and Description -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,24">
                            <TextBlock Text="Edit Property"
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource Gray800}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Update property information and details"
                                       FontSize="14"
                                       Foreground="{StaticResource Gray600}"/>
                        </StackPanel>

                        <!-- Form Content -->
                        <ScrollViewer Grid.Row="2" MaxHeight="400" VerticalScrollBarVisibility="Auto">
                            <StackPanel>

                                <!-- Property Name -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Property Name" 
                                               FontSize="14" 
                                               FontWeight="Medium" 
                                               Foreground="{StaticResource Gray800}" 
                                               Margin="0,0,0,8"/>
                                    <TextBox x:Name="EditNameTextBox" 
                                             Style="{StaticResource FormTextBoxStyle}"
                                             Height="40"/>
                                </StackPanel>

                                <!-- Location -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Location" 
                                               FontSize="14" 
                                               FontWeight="Medium" 
                                               Foreground="{StaticResource Gray800}" 
                                               Margin="0,0,0,8"/>
                                    <TextBox x:Name="EditLocationTextBox" 
                                             Style="{StaticResource FormTextBoxStyle}"
                                             Height="40"/>
                                </StackPanel>

                                <!-- Property Type -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Property Type" 
                                               FontSize="14" 
                                               FontWeight="Medium" 
                                               Foreground="{StaticResource Gray800}" 
                                               Margin="0,0,0,8"/>
                                    <ComboBox x:Name="EditPropertyTypeComboBox" 
                                              Height="40"
                                              Background="White"
                                              BorderBrush="{StaticResource Gray200}"
                                              BorderThickness="1"
                                              IsEditable="True"
                                              Padding="12,0">
                                        <ComboBoxItem Content="Apartment"/>
                                        <ComboBoxItem Content="House"/>
                                        <ComboBoxItem Content="Condo"/>
                                        <ComboBoxItem Content="Townhouse"/>
                                        <ComboBoxItem Content="Villa"/>
                                        <ComboBoxItem Content="Office"/>
                                        <ComboBoxItem Content="Retail"/>
                                        <ComboBoxItem Content="Warehouse"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Category -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Category" 
                                               FontSize="14" 
                                               FontWeight="Medium" 
                                               Foreground="{StaticResource Gray800}" 
                                               Margin="0,0,0,8"/>
                                    <ComboBox x:Name="EditCategoryComboBox" 
                                              Height="40"
                                              Background="White"
                                              BorderBrush="{StaticResource Gray200}"
                                              BorderThickness="1"
                                              IsEditable="True"
                                              Padding="12,0">
                                        <ComboBoxItem Content="For Sale"/>
                                        <ComboBoxItem Content="For Rent"/>
                                        <ComboBoxItem Content="Sold"/>
                                        <ComboBoxItem Content="Rented"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Price -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Price" 
                                               FontSize="14" 
                                               FontWeight="Medium" 
                                               Foreground="{StaticResource Gray800}" 
                                               Margin="0,0,0,8"/>
                                    <TextBox x:Name="EditPriceTextBox" 
                                             Style="{StaticResource FormTextBoxStyle}"
                                             Height="40"/>
                                </StackPanel>

                            </StackPanel>
                        </ScrollViewer>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="3" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,24,0,0">
                            <Button Content="Close"
                                    Background="Transparent"
                                    Foreground="{StaticResource Gray600}"
                                    BorderThickness="0"
                                    Padding="16,8"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Cursor="Hand"
                                    Click="CloseEditPopup_Click"
                                    Margin="0,0,12,0"/>
                            <Button Content="Save Changes"
                                    Background="{StaticResource PrimaryBlue}"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="20,8"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Cursor="Hand"
                                    Click="SaveProperty_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                    </Grid>

                </Border>
            </Grid>

        </Grid>
    </Border>
</Page>
