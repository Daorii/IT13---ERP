<Page x:Class="Real_Estate_Agencies.PropertiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:conv="clr-namespace:Real_Estate_Agencies.Converter"
      Title="PropertiesPage"
      Background="#F8FAFC">

    <Page.Resources>

        <conv:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
        <conv:StatusToColorConverter x:Key="StatusToColorConverter"/>

        <!-- Palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>
        <SolidColorBrush x:Key="PastelBlue" Color="#A7C7E7"/>
        <SolidColorBrush x:Key="PastelYellow" Color="#FFF9B1"/>

        <!-- Header text -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Cell text -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Circular button -->
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Add button -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Form input styles -->
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="{StaticResource Gray200}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="🔍" FontSize="14" Margin="12,0,8,0" VerticalAlignment="Center" Foreground="{StaticResource Gray400}"/>
                        <TextBox Grid.Column="1" x:Name="SearchTextBox" 
                                 Background="Transparent" BorderThickness="0" 
                                 FontSize="14" Padding="0,12"
                                 VerticalAlignment="Center" Foreground="{StaticResource Gray800}"/>
                        <TextBlock Grid.Column="1" Text="Search properties..." x:Name="PlaceholderText"
                                   Foreground="{StaticResource Gray400}" IsHitTestVisible="False" 
                                   VerticalAlignment="Center" Margin="0,12"/>
                    </Grid>
                </Border>

                <!-- Add -->
                <Button Grid.Column="1" Content="+ Add Property" Style="{StaticResource AddButtonStyle}" 
                        Click="Add_Click" Margin="16,0,0,0"/>
            </Grid>

            <!-- Table -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="{StaticResource Gray50}" 
        CornerRadius="8,8,0,0" 
        BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0"
        Grid.Row="0">
                    <Grid Background="{StaticResource Gray50}" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Property" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="Name" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="2" Text="Location" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="3" Text="Category" Style="{StaticResource HeaderTextStyle}"/>

                        <TextBlock Grid.Column="4" Text="Type" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="5" Text="Price" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="6" Text="Status" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="7" Text="Action" Style="{StaticResource HeaderTextStyle}"/>
                    </Grid>

                </Border>


                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Border CornerRadius="0,0,8,8" BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1">
                        <ItemsControl ItemsSource="{Binding Properties}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="{StaticResource Gray100}" BorderThickness="0,0,0,1">
                                        <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Example: Property Image -->
                                            <Border Grid.Column="0" Width="50" Height="40" CornerRadius="4" BorderBrush="Gray" BorderThickness="1" Margin="4">
                                                <Image Source="{Binding Image, Converter={StaticResource ByteArrayToImageConverter}}" Stretch="UniformToFill"/>
                                            </Border>

                                            <!-- Name -->
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" Style="{StaticResource CellTextStyle}"/>
                                            <!-- Location -->
                                            <TextBlock Grid.Column="2" Text="{Binding Location}" Style="{StaticResource CellTextStyle}"/>
                                            <!-- Type -->
                                            <TextBlock Grid.Column="3" Text="{Binding PropertyType}" Style="{StaticResource CellTextStyle}"/>
                                            <!-- Category -->
                                            <TextBlock Grid.Column="4" Text="{Binding Category}" Style="{StaticResource CellTextStyle}"/>
                                            <!-- Price -->
                                            <TextBlock Grid.Column="5" Text="{Binding Price, StringFormat='₱{0:N2}'}" Style="{StaticResource CellTextStyle}"/>
                                            <!-- Status -->
                                            <Border Grid.Column="6" 
        Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
        CornerRadius="12" Padding="6,2" 
        HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Status}" 
               Foreground="White" 
               FontWeight="SemiBold" 
               FontSize="12" 
               TextAlignment="Center" 
               VerticalAlignment="Center"/>
                                            </Border>



                                            <!-- Actions -->
                                            <StackPanel Grid.Column="7" Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource CircularIconButtonStyle}" ToolTip="View" Click="View_Click" CommandParameter="{Binding}">
                                                    <TextBlock Text="👁️" FontSize="12"/>
                                                </Button>
                                                <Button Style="{StaticResource CircularIconButtonStyle}" ToolTip="Edit" Click="Edit_Click" CommandParameter="{Binding}" Margin="4,0,0,0">
                                                    <TextBlock Text="✏️" FontSize="12"/>
                                                </Button>
                                                <Button Style="{StaticResource CircularIconButtonStyle}" ToolTip="Delete" Click="Delete_Click" CommandParameter="{Binding}" Margin="4,0,0,0">
                                                    <TextBlock Text="🗑️" FontSize="12"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>

                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </ScrollViewer>


            </Grid>

            <!-- Pagination -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Showing 1-2 of properties"
                           VerticalAlignment="Center" Foreground="{StaticResource Gray600}" 
                           FontSize="12" HorizontalAlignment="Left"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="1" Background="{StaticResource PrimaryBlue}" Foreground="White"
                            Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                </StackPanel>
            </Grid>

            <!-- View Property Overlay Popup -->
            <Grid x:Name="PopupOverlay"
      Background="#80000000"
      Visibility="Collapsed"
      Grid.RowSpan="3">

                <!-- Frosted Popup -->
                <Border CornerRadius="12" Width="460"
            VerticalAlignment="Center" HorizontalAlignment="Center"
            BorderBrush="{StaticResource PastelBlue}" BorderThickness="2">

                    <!-- Frosted Pastel Background -->
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#CCB3D9FF" Offset="0"/>
                            <GradientStop Color="#CCFFF7B3" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <!-- Shadow -->
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>

                    <!-- Popup Content -->
                    <StackPanel>

                        <!-- Top Bar -->
                        <DockPanel Background="{StaticResource PastelBlue}" Height="40" LastChildFill="False">
                            <TextBlock Text="Property Details"
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="12,0,0,0"/>
                            <Button Content="✕"
                        Width="40" Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        DockPanel.Dock="Right"
                        FontSize="16"
                        Cursor="Hand"
                        Click="ClosePopup_Click"/>
                        </DockPanel>

                        <!-- Content -->
                        <Border Padding="20" HorizontalAlignment="Center">
                            <StackPanel>

                                <Border Width="Auto" MaxWidth="460" Height="Auto" MaxHeight="300" 
        CornerRadius="16" Background="Transparent"
        HorizontalAlignment="Center" Margin="0,0,0,16">
                                    <Image Source="{Binding SelectedProperty.Image, Converter={StaticResource ByteArrayToImageConverter}}"
           Stretch="UniformToFill"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"
           MaxWidth="460"
           MaxHeight="300">
                                        <Image.Clip>
                                            <RectangleGeometry Rect="0,0,460,300" RadiusX="16" RadiusY="16"/>
                                        </Image.Clip>
                                    </Image>
                                </Border>




                                <!-- Title -->
                                <TextBlock Text="{Binding SelectedProperty.Name}" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="#1E90FF"  
                               TextAlignment="Center" Margin="0,0,0,12"/>

                                <!-- Details -->
                                <StackPanel>
                                    <TextBlock Text="{Binding SelectedProperty.Location}" 
                                   FontSize="14" Foreground="#333333" 
                                   TextAlignment="Center" Margin="0,2"/>
                                    <TextBlock Text="{Binding SelectedProperty.PropertyType}" 
                                   FontSize="14" Foreground="#444444" 
                                   TextAlignment="Center" Margin="0,2"/>
                                    <TextBlock Text="{Binding SelectedProperty.Category}" 
                                   FontSize="14" Foreground="#444444" 
                                   TextAlignment="Center" Margin="0,2"/>
                                    <TextBlock Text="{Binding SelectedProperty.Price, StringFormat='₱{0:N2}'}" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#D97706"   
                                   TextAlignment="Center" Margin="0,8,0,0"/>
                                </StackPanel>

                                <!-- Bottom Close Button -->
                                <Button Content="Close"
                            Background="#4A90E2"   
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,6"
                            Margin="0,16,0,0"
                            FontWeight="SemiBold"
                            Width="100"
                            HorizontalAlignment="Center"
                            Cursor="Hand"
                            Click="ClosePopup_Click"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Border>
            </Grid>

            <!-- Edit Property Overlay -->
            <Grid x:Name="EditPropertyOverlay"
      Grid.RowSpan="4"
      Background="#80000000"
      Visibility="Collapsed"
      VerticalAlignment="Stretch"
      HorizontalAlignment="Stretch"
      Panel.ZIndex="99">

                <Border Background="White" CornerRadius="16" Padding="30" Width="480" MaxHeight="700"
            VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="16" ShadowDepth="4" Direction="270"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Close Button -->
                        <Button Content="✕" Width="32" Height="32" FontSize="14" FontWeight="Bold"
                    Background="#F5F6FA" BorderThickness="0" Foreground="#5C677D"
                    HorizontalAlignment="Right" Cursor="Hand" Click="CloseEditOverlay_Click"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Margin="0,10,0,20">
                            <TextBlock Text="Edit Property" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="Update property details" FontSize="13" Foreground="#6C7A89" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Form Content -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">
                                <TextBox x:Name="TxtPropertyId" Visibility="Collapsed"/>

                                <!-- Property Name -->
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Property Name" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtPropertyName" Height="40" Padding="10"
                                 BorderBrush="#E1E8ED" BorderThickness="1"
                                 Background="White" Foreground="#2C3E50"
                                 VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <!-- Property Category (Read-only) -->
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Property Category" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtCategory" Height="40" Padding="10"
                                 BorderBrush="#E1E8ED" BorderThickness="1"
                                 Background="#F5F6FA" Foreground="#5C677D"
                                 VerticalContentAlignment="Center"
                                 IsReadOnly="True"/>
                                </StackPanel>

                                <!-- Property Type (Read-only) -->
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Property Type" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtPropertyType" Height="40" Padding="10"
                                 BorderBrush="#E1E8ED" BorderThickness="1"
                                 Background="#F5F6FA" Foreground="#5C677D"
                                 VerticalContentAlignment="Center"
                                 IsReadOnly="True"/>
                                </StackPanel>

                                <!-- Address -->
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Address" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtAddress" Height="40" Padding="10"
                                 BorderBrush="#E1E8ED" BorderThickness="1"
                                 Background="#F5F6FA" Foreground="#5C677D"
                                 VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <!-- Price -->
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Price" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtPrice" Height="40" Padding="10"
                                 BorderBrush="#E1E8ED" BorderThickness="1"
                                 Background="White" Foreground="#5C677D"
                                 VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <!-- Status -->
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Status" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <ComboBox x:Name="CmbStatus" Height="40" Padding="8,4"
                                  BorderBrush="#E1E8ED" BorderThickness="1"
                                  Background="White" Foreground="#2C3E50"
                                  VerticalContentAlignment="Center">
                                        <ComboBoxItem Content="Available"/>
                                        <ComboBoxItem Content="Sold"/>
                                        <ComboBoxItem Content="Pending"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Footer Buttons -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Close" Width="90" Height="40" Background="White"
                        BorderBrush="#D0D5DD" BorderThickness="1"
                        Foreground="#344054" Cursor="Hand"
                        Margin="0,0,12,0" Click="CloseEditOverlay_Click"/>
                            <Button Content="Update Property" Width="150" Height="40"
                        Background="#4F46E5" BorderThickness="0"
                        Foreground="White" FontWeight="Bold" Cursor="Hand"
                        Click="UpdateProperty_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>



        </Grid>
    </Border>
</Page>