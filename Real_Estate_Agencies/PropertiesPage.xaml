<Page x:Class="Real_Estate_Agencies.PropertiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PropertiesPage">

    <Grid Background="#F8F8F8" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Property Management"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333"
                       DockPanel.Dock="Left"/>
            <Button x:Name="AddPropertyButton"
                    Content="Add Property"
                    Width="130"
                    Height="35"
                    Margin="10,0,0,0"
                    DockPanel.Dock="Right"
                    Background="#1976D2"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Click="AddPropertyButton_Click"/>
        </DockPanel>

        <!-- Properties Table -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8">
            <DataGrid x:Name="PropertiesGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeight="35"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None"
                      Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Property Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
