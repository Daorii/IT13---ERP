<Page x:Class="Real_Estate_Agencies.IncentivesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="IncentivesPage"
      Background="#F8FAFC">

    <Page.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>
        <SolidColorBrush x:Key="RowHover" Color="#EFF6FF"/>

        <!-- Table header -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Table cell -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Circular button -->
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Add button -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Search + Add -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="{StaticResource Gray200}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="🔍" FontSize="14" Margin="12,0,8,0" VerticalAlignment="Center" Foreground="{StaticResource Gray400}"/>
                        <TextBox Grid.Column="1" x:Name="SearchTextBox" Background="Transparent" BorderThickness="0"
                                 FontSize="14" Padding="0,12" VerticalAlignment="Center" Foreground="{StaticResource Gray800}"/>
                        <TextBlock Grid.Column="1" Text="Search incentives..." x:Name="PlaceholderText"
                                   Foreground="{StaticResource Gray400}" IsHitTestVisible="False"
                                   VerticalAlignment="Center" Margin="0,12"/>
                    </Grid>
                </Border>

                <!-- Add -->
                <Button Grid.Column="1" Content="+ Add Incentive" Style="{StaticResource AddButtonStyle}"
                        Click="AddIncentive_Click" Margin="16,0,0,0"/>
            </Grid>

            <!-- Table header -->
            <Border Grid.Row="1" Background="White" CornerRadius="8,8,0,0" BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0">
                <Grid Background="{StaticResource Gray50}" Height="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Incentive ID" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="1" Text="Agent Name" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="2" Text="Incentive Type" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="3" Text="Amount" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="4" Text="Release Date" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="5" Text="Action" Style="{StaticResource HeaderTextStyle}"/>
                </Grid>
            </Border>

            <!-- Incentives list -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="White">
                <Border CornerRadius="0,0,8,8" BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1">
                    <ItemsControl x:Name="IncentivesDataGrid" ItemsSource="{Binding Incentives}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" BorderBrush="{StaticResource Gray100}" BorderThickness="0,0,0,1">
                                    <Grid Height="40">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.2*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="0.8*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding IncentiveId}" Style="{StaticResource CellTextStyle}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding AgentName}" Style="{StaticResource CellTextStyle}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding IncentiveType}" Style="{StaticResource CellTextStyle}"/>
                                        <TextBlock Grid.Column="3" Text="{Binding Amount}" Style="{StaticResource CellTextStyle}"/>
                                        <TextBlock Grid.Column="4" Text="{Binding ReleaseDate}" Style="{StaticResource CellTextStyle}"/>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button Style="{StaticResource CircularIconButtonStyle}" ToolTip="Edit" Margin="2,0"
                                                    Click="EditButton_Click" CommandParameter="{Binding}">
                                                <TextBlock Text="✏️" FontSize="12"/>
                                            </Button>
                                            <Button Style="{StaticResource CircularIconButtonStyle}" ToolTip="Delete" Margin="2,0"
                                                    Click="DeleteButton_Click" CommandParameter="{Binding}">
                                                <TextBlock Text="🗑️" FontSize="12"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </ScrollViewer>

            <!-- Pagination -->
            <Grid Grid.Row="3" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Showing 1-3 of 3 incentives"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource Gray600}"
                           FontSize="12"
                           Margin="0,0,16,0"
                           HorizontalAlignment="Left"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="1" Width="32" Height="32" Background="{StaticResource PrimaryBlue}"
                            Foreground="White" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                </StackPanel>
            </Grid>

            <!-- Edit Incentive Overlay -->
            <Grid x:Name="EditIncentiveOverlay"
                  Grid.RowSpan="4"
                  Background="#80000000"
                  Visibility="Collapsed"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  Panel.ZIndex="99">
                <Border Background="White" CornerRadius="16" Padding="30" Width="480" MaxHeight="700" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="16" ShadowDepth="4" Direction="270"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Close Button -->
                        <Button Content="✕" Width="32" Height="32" FontSize="14" FontWeight="Bold"
                                Background="#F5F6FA" BorderThickness="0" Foreground="#5C677D"
                                HorizontalAlignment="Right" Cursor="Hand" Click="CloseEditOverlay_Click"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Margin="0,10,0,20">
                            <TextBlock Text="Edit Incentive" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="Update incentive details" FontSize="13" Foreground="#6C7A89" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Form Content -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">
                                <TextBox x:Name="TxtIncentiveId" Visibility="Collapsed"/>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Agent Name  " FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtAgentId" Height="40" Padding="10" BorderBrush="#E1E8ED" BorderThickness="1" Background="#F5F6FA" Foreground="#5C677D" IsReadOnly="True" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Incentive Type" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <ComboBox x:Name="CmbIncentiveType" Height="40" Padding="8,4" BorderBrush="#E1E8ED" BorderThickness="1" Background="White" Foreground="#2C3E50" VerticalContentAlignment="Center">
                                        <ComboBoxItem Content="Performance"/>
                                        <ComboBoxItem Content="Referral"/>
                                        <ComboBoxItem Content="Target Bonus"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Amount" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtAmount" Height="40" Padding="10" BorderBrush="#E1E8ED" BorderThickness="1" Background="White" Foreground="#5C677D" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Release Date" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtReleaseDate" Height="40" Padding="10" BorderBrush="#E1E8ED" BorderThickness="1" Background="#F5F6FA" Foreground="#5C677D" IsReadOnly="True" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Footer Buttons -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Close" Width="90" Height="40" Background="White"
                                    BorderBrush="#D0D5DD" BorderThickness="1"
                                    Foreground="#344054" Cursor="Hand"
                                    Margin="0,0,12,0" Click="CloseEditOverlay_Click"/>
                            <Button Content="Update Incentive" Width="150" Height="40" Background="#4F46E5"
                                    BorderThickness="0" Foreground="White"
                                    FontWeight="Bold" Cursor="Hand"
                                    Click="UpdateIncentive_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Page>
