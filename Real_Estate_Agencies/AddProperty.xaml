<Window x:Class="Real_Estate_Agencies.AddPropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Property" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Property Name"/>
            <TextBox x:Name="NameInput" Margin="0,5,0,10"/>

            <TextBlock Text="Location"/>
            <TextBox x:Name="LocationInput" Margin="0,5,0,10"/>

            <TextBlock Text="Type"/>
            <TextBox x:Name="TypeInput" Margin="0,5,0,10"/>

            <TextBlock Text="Category"/>
            <TextBox x:Name="CategoryInput" Margin="0,5,0,10"/>

            <TextBlock Text="Price"/>
            <TextBox x:Name="PriceInput" Margin="0,5,0,10"/>

            <TextBlock Text="Status"/>
            <TextBox x:Name="StatusInput" Margin="0,5,0,10"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Save" Width="80" Background="#1976D2" Foreground="White" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
