<Window x:Class="Real_Estate_Agencies.AddPropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Property"
        Height="650" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Property Name" Margin="0,0,0,2"/>
            <TextBox x:Name="TxtPropertyName" Margin="0,0,0,10"/>

            <TextBlock Text="Location" Margin="0,0,0,2"/>
            <TextBox x:Name="TxtLocation" Margin="0,0,0,10"/>

            <TextBlock Text="Property Type" Margin="0,0,0,2"/>
            <TextBox x:Name="TxtPropertyType" Margin="0,0,0,10"/>

            <TextBlock Text="Category" Margin="0,0,0,2"/>
            <TextBox x:Name="TxtCategory" Margin="0,0,0,10"/>

            <TextBlock Text="Price" Margin="0,0,0,2"/>
            <TextBox x:Name="TxtPrice" Margin="0,0,0,10"/>

            <TextBlock Text="Status" Margin="0,0,0,2"/>
            <ComboBox x:Name="CmbStatus" Margin="0,0,0,10">
                <ComboBoxItem Content="On Sale"/>
                <ComboBoxItem Content="Sold"/>
                <ComboBoxItem Content="Pending"/>
            </ComboBox>

            <TextBlock Text="Property Image" Margin="0,0,0,2"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Choose Image" Click="ChooseImage_Click"/>
                <TextBlock x:Name="TxtImagePath" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <Border Margin="0,10,0,0" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Height="150">
                <Image x:Name="PreviewImage" Stretch="UniformToFill"/>
            </Border>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Add" Width="80" Background="#FFE08F" FontWeight="Bold" Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Window>
