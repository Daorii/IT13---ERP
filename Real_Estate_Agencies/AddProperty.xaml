<Window x:Class="Real_Estate_Agencies.AddPropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Property"
        Height="600" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        Background="#F5F5F0">

    <Window.Resources>
        <!-- Color Scheme -->
        <Color x:Key="AccentBlue">#4A6FA5</Color>
        <Color x:Key="PrimaryKhaki">#69604C</Color>
        <Color x:Key="BackgroundEggshell">#F5F5F0</Color>
        <Color x:Key="HighlightYellow">#F1C40F</Color>

        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource AccentBlue}"/>
        <SolidColorBrush x:Key="PrimaryKhakiBrush" Color="{StaticResource PrimaryKhaki}"/>
        <SolidColorBrush x:Key="BackgroundEggshellBrush" Color="{StaticResource BackgroundEggshell}"/>
        <SolidColorBrush x:Key="HighlightYellowBrush" Color="{StaticResource HighlightYellow}"/>
        <SolidColorBrush x:Key="BorderLight" Color="#E0E0E0"/>

        <DropShadowEffect x:Key="CardShadowEffect"
                          ShadowDepth="2" Direction="270" 
                          Color="#BBBBBB"
                          Opacity="0.3" BlurRadius="5"/>

        <!-- Form Label Style -->
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryKhakiBrush}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Form TextBox Style -->
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryKhakiBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Name="Border"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryKhakiBrush}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBlueBrush}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Form ComboBox Style -->
        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryKhakiBrush}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#6682B1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryKhakiBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Browse Button Style -->
        <Style x:Key="BrowseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource HighlightYellowBrush}"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="📁" VerticalAlignment="Center" FontSize="12" Margin="0,0,5,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FFE135"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White"
            CornerRadius="20" 
            Margin="15"
            Padding="20"
            Effect="{StaticResource CardShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <Border Background="{StaticResource PrimaryBlueBrush}" 
                        CornerRadius="20" 
                        Width="35" Height="35" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,8">
                    <TextBlock Text="🏠" 
                               FontSize="18" 
                               Foreground="White"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Add New Property" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryKhakiBrush}" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Fill in the details to list a new property" 
                           FontSize="11" 
                           Foreground="{StaticResource PrimaryKhakiBrush}" 
                           Opacity="0.7"
                           HorizontalAlignment="Center"
                           Margin="0,3,0,0"/>
            </StackPanel>

            <!-- Form Fields with Hidden Scrollbar -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Hidden" 
                         HorizontalScrollBarVisibility="Disabled"
                         CanContentScroll="True"
                         PanningMode="VerticalOnly"
                         Margin="0,0,0,10">
                <StackPanel>
                    <!-- Property Name -->
                    <TextBlock Text="Property Name *" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="TxtPropertyName" 
                             Style="{StaticResource FormTextBoxStyle}"
                             Margin="0,0,0,12"/>

                    <!-- Location -->
                    <TextBlock Text="Location *" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="TxtLocation" 
                             Style="{StaticResource FormTextBoxStyle}"
                             Margin="0,0,0,12"/>

                    <!-- Property Type and Category Row -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Property Type *" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox x:Name="CmbPropertyType" 
                                      Style="{StaticResource FormComboBoxStyle}">
                                <ComboBoxItem Content="House"/>
                                <ComboBoxItem Content="Apartment"/>
                                <ComboBoxItem Content="Condo"/>
                                <ComboBoxItem Content="Duplex"/>
                                <ComboBoxItem Content="Villa"/>
                                <ComboBoxItem Content="Office"/>
                                <ComboBoxItem Content="Commercial"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Category *" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox x:Name="CmbCategory" 
                                      Style="{StaticResource FormComboBoxStyle}">
                                <ComboBoxItem Content="Residential"/>
                                <ComboBoxItem Content="Commercial"/>
                                <ComboBoxItem Content="Vacation"/>
                                <ComboBoxItem Content="Investment"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Price and Status Row -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Price *" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="TxtPrice" 
                                     Style="{StaticResource FormTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Status *" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox x:Name="CmbStatus" 
                                      Style="{StaticResource FormComboBoxStyle}">
                                <ComboBoxItem Content="On Sale" IsSelected="True"/>
                                <ComboBoxItem Content="Pending"/>
                                <ComboBoxItem Content="Sold"/>
                                <ComboBoxItem Content="Occupied"/>
                                <ComboBoxItem Content="Vacant"/>
                                <ComboBoxItem Content="Under Maintenance"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Property Image Section -->
                    <TextBlock Text="Property Image" Style="{StaticResource FormLabelStyle}"/>
                    <Border Background="#F8F9FA" 
                            CornerRadius="8" 
                            BorderBrush="{StaticResource BorderLight}" 
                            BorderThickness="1" 
                            Padding="12"
                            Margin="0,0,0,0">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="TxtImagePath" 
                                           Grid.Column="0"
                                           Text="No image selected" 
                                           VerticalAlignment="Center" 
                                           FontStyle="Italic"
                                           FontSize="11"
                                           Foreground="{StaticResource PrimaryKhakiBrush}"
                                           Opacity="0.6"/>

                                <Button Grid.Column="1"
                                        Content="Browse"
                                        Style="{StaticResource BrowseButtonStyle}"
                                        Click="ChooseImage_Click"/>
                            </Grid>

                            <!-- Image Preview -->
                            <Border x:Name="ImagePreviewBorder" 
                                    CornerRadius="6" 
                                    Height="100" 
                                    Background="#E9ECEF"
                                    BorderBrush="{StaticResource BorderLight}" 
                                    BorderThickness="1"
                                    Visibility="Collapsed">
                                <Grid>
                                    <TextBlock Text="📷" 
                                               FontSize="28" 
                                               Foreground="#ADB5BD"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               x:Name="PlaceholderIcon"/>
                                    <Image x:Name="PreviewImage" 
                                           Stretch="UniformToFill" 
                                           ClipToBounds="True"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Content="Cancel"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="Cancel_Click"
                        Margin="0,0,10,0"
                        Width="80"/>

                <Button Grid.Column="2"
                        Content="Add Property"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Add_Click"
                        Width="120"/>
            </Grid>
        </Grid>
    </Border>
</Window>