<Window x:Class="Real_Estate_Agencies.AddSaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Sale"
        Width="460" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Background="Transparent">

        <Border Background="#FFE9F7FF"
                CornerRadius="16"
                Padding="30"
                BorderBrush="#FFCCE7F5"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="LightBlue"
                                  BlurRadius="25"
                                  ShadowDepth="0"
                                  Opacity="0.35"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="💰 Add New Sale"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#FF3A4A60"
                           Margin="0,0,0,24"
                           HorizontalAlignment="Center"/>

                <!-- CLIENT SEARCH -->
                <TextBlock Text="Client" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <Grid Margin="0,5,0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search Box with placeholder -->
                    <Grid Grid.Row="0">
                        <TextBox x:Name="ClientSearchBox"
                                 Padding="8"
                                 Background="White"
                                 BorderBrush="#FFBFD6E5"
                                 BorderThickness="1"
                                 Height="32"
                                 TextChanged="ClientSearchBox_TextChanged"/>
                        <TextBlock Text="Search clients..."
                                   Foreground="Gray"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text.IsEmpty, ElementName=ClientSearchBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>

                    <ListBox x:Name="ClientSuggestionsList"
                             Grid.Row="1"
                             Margin="0,2,0,0"
                             Background="White"
                             BorderBrush="#FFBFD6E5"
                             BorderThickness="1"
                             MaxHeight="120"
                             Visibility="Collapsed"
                             MouseDoubleClick="ClientSuggestionsList_MouseDoubleClick"/>
                </Grid>

                <!-- PROPERTY -->
                <TextBlock Text="Property Type" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <ComboBox x:Name="PropertyNameComboBox"
                          Margin="0,5,0,12" Padding="8"
                          Background="LightGray"
                          BorderBrush="#FFBFD6E5"
                          BorderThickness="1"
                          IsEnabled="False">
                    <ComboBoxItem Content="(Auto-filled from client selection)" IsSelected="True" Foreground="Gray"/>
                </ComboBox>

                <!-- AGENT SEARCH -->
                <TextBlock Text="Agent" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <Grid Margin="0,5,0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Agent search box with placeholder -->
                    <Grid Grid.Row="0">
                        <TextBox x:Name="AgentSearchBox"
                                 Padding="8"
                                 Background="White"
                                 BorderBrush="#FFBFD6E5"
                                 BorderThickness="1"
                                 Height="32"
                                 TextChanged="AgentSearchBox_TextChanged"/>
                        <TextBlock Text="Search agents..."
                                   Foreground="Gray"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text.IsEmpty, ElementName=AgentSearchBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>

                    <ListBox x:Name="AgentSuggestionsList"
                             Grid.Row="1"
                             Margin="0,2,0,0"
                             Background="White"
                             BorderBrush="#FFBFD6E5"
                             BorderThickness="1"
                             MaxHeight="120"
                             Visibility="Collapsed"
                             MouseDoubleClick="AgentSuggestionsList_MouseDoubleClick"/>

                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,4,0,0"
                                Visibility="Collapsed"
                                x:Name="AgentPaginationPanel">
                        <Button x:Name="PrevAgentPageButton"
                                Content="❮ Prev"
                                Width="60"
                                Height="24"
                                Margin="0,0,4,0"
                                Click="PrevAgentPageButton_Click"/>
                        <Button x:Name="NextAgentPageButton"
                                Content="Next ❯"
                                Width="60"
                                Height="24"
                                Click="NextAgentPageButton_Click"/>
                    </StackPanel>
                </Grid>

                <!-- SALE DATE -->
                <TextBlock Text="Sale Date" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <DatePicker x:Name="SaleDatePicker"
                            Margin="0,5,0,12" Height="32"
                            Background="White"
                            BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                <!-- PRICE -->
                <TextBlock Text="Price" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <Label x:Name="LblPrice"
                       Content="N/A"
                       Margin="0,5,0,12"
                       Background="White"
                       BorderBrush="#FFBFD6E5"
                       BorderThickness="1"
                       Padding="8"
                       Foreground="#FF2C2C2C"/>

                <!-- PAYMENT MODE -->
                <TextBlock Text="Payment Mode" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <ComboBox x:Name="PaymentModeComboBox"
                          Margin="0,5,0,12" Padding="8"
                          Background="White"
                          BorderBrush="#FFBFD6E5"
                          BorderThickness="1">
                    <ComboBoxItem Content="-- Select payment mode --" IsSelected="True" Foreground="Gray"/>
                    <ComboBoxItem Content="Cash"/>
                    <ComboBoxItem Content="Bank Transfer"/>
                    <ComboBoxItem Content="Credit"/>
                </ComboBox>

                <!-- BUTTONS -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Cancel" Width="100" Height="38"
                            Margin="0,0,12,0"
                            Background="#FFE9F7FF"
                            Foreground="#FF2C2C2C"
                            BorderBrush="#FFAACDEB"
                            BorderThickness="1.2"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="CancelButton_Click"/>

                    <Button Content="Add" Width="100" Height="38"
                            Background="#FFFFE08F"
                            Foreground="#FF2C2C2C"
                            FontWeight="Bold"
                            BorderBrush="#FFE6C96D"
                            BorderThickness="1.2"
                            Cursor="Hand"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Button Content="✖"
                Width="28" Height="28"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Background="Transparent"
                Foreground="Red"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="CancelButton_Click"/>
    </Grid>
</Window>
