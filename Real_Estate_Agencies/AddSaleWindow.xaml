<Window x:Class="Real_Estate_Agencies.AddSaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Sale"
        Width="460" Height="560"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Grid Background="Transparent">

        <!-- Main Card -->
        <Border Background="#FFE9F7FF"
                CornerRadius="16"
                Padding="30"
                BorderBrush="#FFCCE7F5"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="LightBlue"
                                  BlurRadius="25"
                                  ShadowDepth="0"
                                  Opacity="0.35"/>
            </Border.Effect>

            <StackPanel>

                <!-- Title -->
                <TextBlock Text="💰 Add New Sale"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#FF3A4A60"
                           Margin="0,0,0,24"
                           HorizontalAlignment="Center"/>

                <!-- Input Fields -->
                <StackPanel>
                    <!-- remove Sale ID controls from XAML; start from Client ID -->
                    <TextBlock Text="Client ID" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtClientId"
         Margin="0,5,0,12" Padding="8"
         Background="White"
         BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <TextBlock Text="Property ID" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtPropertyId"
         Margin="0,5,0,12" Padding="8"
         Background="White"
         BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <TextBlock Text="Agent ID" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtAgentId"
         Margin="0,5,0,12" Padding="8"
         Background="White"
         BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <TextBlock Text="Sale Date" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <DatePicker x:Name="SaleDatePicker"
            Margin="0,5,0,12" Height="32"
            Background="White"
            BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <TextBlock Text="Payment Mode" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <ComboBox x:Name="PaymentModeComboBox"
          Margin="0,5,0,12" Padding="8"
          Background="White"
          BorderBrush="#FFBFD6E5" BorderThickness="1">
                       
                    </ComboBox>

                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Cancel" Width="100" Height="38"
                            Margin="0,0,12,0"
                            Background="#FFE9F7FF"
                            Foreground="#FF2C2C2C"
                            BorderBrush="#FFAACDEB"
                            BorderThickness="1.2"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                           Click="CancelButton_Click"/>

                    <Button Content="Add" Width="100" Height="38"
                            Background="#FFFFE08F"
                            Foreground="#FF2C2C2C"
                            FontWeight="Bold"
                            BorderBrush="#FFE6C96D"
                            BorderThickness="1.2"
                            Cursor="Hand"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Button Content="✖"
                Width="28" Height="28"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Background="Transparent"
                Foreground="Red"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                 Click="CancelButton_Click"/>
    </Grid>
</Window>
