<Page x:Class="Real_Estate_Agencies.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ClientsPage">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Add Button -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="Clients Management"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
            <Button Content="Add Client"
                    Width="120" Height="35"
                    Margin="20 0 0 0"
                    Background="#FFE08F"
                    Foreground="Black"
                    FontWeight="Bold"
                    Click="AddClient_Click"/>
        </StackPanel>

        <!-- Clients Table -->
        <DataGrid x:Name="ClientsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#FFF3C4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Client ID" Binding="{Binding ClientId}" Width="*"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Contact Info" Binding="{Binding ContactInfo}" Width="*"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="2*"/>
                <DataGridTextColumn Header="Preferred Property Type" Binding="{Binding PreferredPropertyType}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
