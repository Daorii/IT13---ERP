<Window x:Class="Real_Estate_Agencies.AddIncentive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Incentive"
        Width="460" Height="580"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Background="Transparent">
        <Border Background="#FFE9F7FF"
                CornerRadius="16"
                Padding="30"
                BorderBrush="#FFCCE7F5"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="LightBlue"
                                  BlurRadius="25"
                                  ShadowDepth="0"
                                  Opacity="0.35"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="🎁 Add Incentive"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF3A4A60"
                           Margin="0,0,0,24"
                           HorizontalAlignment="Center"/>

                <!-- AGENT SEARCH -->
                <TextBlock Text="Agent" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <Grid Margin="0,5,0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search box -->
                    <Grid Grid.Row="0">
                        <TextBox x:Name="AgentSearchBox"
                                 Padding="8"
                                 Background="White"
                                 BorderBrush="#FFBFD6E5"
                                 BorderThickness="1"
                                 Height="32"
                                 TextChanged="AgentSearchBox_TextChanged"/>
                        <TextBlock Text="Search agents..."
                                   Foreground="Gray"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text.IsEmpty, ElementName=AgentSearchBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>

                    <ListBox x:Name="AgentSuggestionsList"
                             Grid.Row="1"
                             Margin="0,2,0,0"
                             Background="White"
                             BorderBrush="#FFBFD6E5"
                             BorderThickness="1"
                             MaxHeight="120"
                             Visibility="Collapsed"
                             MouseDoubleClick="AgentSuggestionsList_MouseDoubleClick"/>

                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,4,0,0"
                                Visibility="Collapsed"
                                x:Name="AgentPaginationPanel">
                        <Button x:Name="PrevAgentPageButton"
                                Content="❮ Prev"
                                Width="60"
                                Height="24"
                                Margin="0,0,4,0"
                                Click="PrevAgentPageButton_Click"/>
                        <Button x:Name="NextAgentPageButton"
                                Content="Next ❯"
                                Width="60"
                                Height="24"
                                Click="NextAgentPageButton_Click"/>
                    </StackPanel>
                </Grid>

                <!-- INCENTIVE TYPE -->
                <TextBlock Text="Incentive Type" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <ComboBox x:Name="CmbIncentiveType"
                          Margin="0,5,0,12"
                          Padding="8"
                          Background="White"
                          BorderBrush="#FFBFD6E5"
                          BorderThickness="1">
                    <ComboBoxItem Content="Performance"/>
                    <ComboBoxItem Content="Referral"/>
                    <ComboBoxItem Content="Target Bonus"/>
                </ComboBox>

                <!-- AMOUNT -->
                <TextBlock Text="Amount" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <TextBox x:Name="TxtAmount"
                         Margin="0,5,0,12"
                         Padding="8"
                         Background="White"
                         BorderBrush="#FFBFD6E5"
                         BorderThickness="1"/>

                <!-- RELEASE DATE -->
                <TextBlock Text="Release Date (Auto)"
                           FontWeight="SemiBold"
                           Foreground="#FF4A5568"/>
                <TextBox x:Name="TxtReleaseDate"
                         Margin="0,5,0,12"
                         Padding="8"
                         Background="#F5F6FA"
                         BorderBrush="#FFBFD6E5"
                         BorderThickness="1"
                         IsReadOnly="True"/>

                <!-- BUTTONS -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Cancel"
                            Width="100" Height="38"
                            Margin="0,0,12,0"
                            Background="#FFE9F7FF"
                            Foreground="#FF2C2C2C"
                            BorderBrush="#FFAACDEB"
                            BorderThickness="1.2"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="Cancel_Click"/>
                    <Button Content="Add"
                            Width="100" Height="38"
                            Background="#FFFFE08F"
                            Foreground="#FF2C2C2C"
                            FontWeight="Bold"
                            BorderBrush="#FFE6C96D"
                            BorderThickness="1.2"
                            Cursor="Hand"
                            Click="Add_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- CLOSE BUTTON -->
        <Button Content="✖"
                Width="28" Height="28"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Background="Transparent"
                Foreground="Red"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="Close_Click"/>
    </Grid>
</Window>
