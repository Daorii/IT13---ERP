<Window x:Class="Real_Estate_Agencies.AddIncentive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Incentive"
        Width="450" Height="550"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Grid Background="Transparent">
        <!-- Main Card -->
        <Border Background="#FFE9F7FF"
                CornerRadius="16"
                Padding="25"
                BorderBrush="#FFCCE7F5"
                BorderThickness="1"
                SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect Color="LightBlue"
                                  BlurRadius="25"
                                  ShadowDepth="0"
                                  Opacity="0.35"/>
            </Border.Effect>

            <StackPanel>
                <!-- Title -->
                <TextBlock Text="🎁 Add Incentive"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF3A4A60"
                           Margin="0,0,0,24"
                           HorizontalAlignment="Center"/>

                <!-- Input Fields -->
                <StackPanel>
                    <!-- Agent ID -->
                    <TextBlock Text="Agent ID" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtAgentId"
                             Margin="0,5,0,12" Padding="8"
                             Background="White"
                             BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <!-- Incentive Type -->
                    <TextBlock Text="Incentive Type" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <ComboBox x:Name="CmbIncentiveType"
                              Margin="0,5,0,12" Padding="8"
                              Background="White"
                              BorderBrush="#FFBFD6E5" BorderThickness="1">
                        <ComboBoxItem Content="Performance"/>
                        <ComboBoxItem Content="Referral"/>
                        <ComboBoxItem Content="Target Bonus"/>
                    </ComboBox>

                    <!-- Amount -->
                    <TextBlock Text="Amount" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtAmount"
                             Margin="0,5,0,12" Padding="8"
                             Background="White"
                             BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <!-- Release Date -->
                    <TextBlock Text="Release Date (Auto)" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtReleaseDate"
                             Margin="0,5,0,12" Padding="8"
                             Background="#F5F6FA"
                             BorderBrush="#FFBFD6E5" BorderThickness="1"
                             IsReadOnly="True"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Cancel" Width="100" Height="38"
                            Margin="0,0,12,0"
                            Background="#FFE9F7FF"
                            Foreground="#FF2C2C2C"
                            BorderBrush="#FFAACDEB"
                            BorderThickness="1.2"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="Cancel_Click"/>

                    <Button Content="Add" Width="100" Height="38"
                            Background="#FFFFE08F"
                            Foreground="#FF2C2C2C"
                            FontWeight="Bold"
                            BorderBrush="#FFE6C96D"
                            BorderThickness="1.2"
                            Cursor="Hand"
                            Click="Add_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Button Content="✖"
                Width="28" Height="28"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Background="Transparent"
                Foreground="Red"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="Close_Click"/>
    </Grid>
</Window>
