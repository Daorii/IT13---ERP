<Window x:Class="Real_Estate_Agencies.AddIncentive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Incentive"
        Width="460" Height="480"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Rounded TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#FFBFD6E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="0,5,0,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8"
                                Background="White"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="Transparent">
        <!-- Main Card -->
        <Border x:Name="MainCard"
                Background="#FFE9F7FF"
                CornerRadius="16"
                Padding="30"
                BorderBrush="#FFCCE7F5"
                BorderThickness="1">

            <StackPanel>
                <!-- Header -->
                <TextBlock Text="🎁 Add Incentive"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF3A4A60"
                           Margin="0,0,0,24"
                           HorizontalAlignment="Center"/>

                <!-- Agent Search -->
                <TextBlock Text="Agent" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <Grid Margin="0,5,0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search box -->
                    <Grid Grid.Row="0">
                        <TextBox x:Name="AgentSearchBox"
                                 Height="38"
                                 TextChanged="AgentSearchBox_TextChanged"/>
                        <TextBlock Text="Search agents..."
                                   Foreground="Gray"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text.IsEmpty, ElementName=AgentSearchBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>

                    <!-- Suggestions list -->
                    <ListBox x:Name="AgentSuggestionsList"
                             Grid.Row="1"
                             Margin="0,2,0,0"
                             Background="White"
                             BorderBrush="#FFBFD6E5"
                             BorderThickness="1"
                             MaxHeight="200"
                             FontSize="14"
                             Visibility="Collapsed"
                             MouseDoubleClick="AgentSuggestionsList_MouseDoubleClick"/>

                    <!-- Pagination -->
                    <StackPanel x:Name="AgentPaginationPanel"
                                Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,4,0,0"
                                Visibility="Collapsed">
                        <Button x:Name="PrevAgentPageButton" Content="❮ Prev" Width="60" Height="24" Margin="0,0,4,0" Click="PrevAgentPageButton_Click"/>
                        <Button x:Name="NextAgentPageButton" Content="Next ❯" Width="60" Height="24" Click="NextAgentPageButton_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Incentive Type -->
                <TextBlock Text="Incentive Type" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <ComboBox x:Name="CmbIncentiveType"
                          Margin="0,5,0,12"
                          Padding="8"
                          Background="White"
                          BorderBrush="#FFBFD6E5"
                          BorderThickness="1">
                    <ComboBoxItem Content="Performance"/>
                    <ComboBoxItem Content="Referral"/>
                    <ComboBoxItem Content="Target Bonus"/>
                </ComboBox>

                <!-- Amount -->
                <TextBlock Text="Amount" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <TextBox x:Name="TxtAmount"/>

                <!-- Release Date -->
                <TextBlock Text="Release Date (Auto)" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                <TextBox x:Name="TxtReleaseDate" IsReadOnly="True" Background="#F5F6FA"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Cancel"
                            Width="100" Height="38"
                            Margin="0,0,12,0"
                            Background="#FFE9F7FF"
                            Foreground="#FF2C2C2C"
                            BorderBrush="#FFAACDEB"
                            BorderThickness="1.2"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="Cancel_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Add"
                            Width="100" Height="38"
                            Background="#FFFFE08F"
                            Foreground="#FF2C2C2C"
                            FontWeight="Bold"
                            BorderBrush="#FFE6C96D"
                            BorderThickness="1.2"
                            Cursor="Hand"
                            Click="Add_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
