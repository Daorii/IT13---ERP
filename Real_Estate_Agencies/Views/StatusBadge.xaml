<UserControl x:Class="Real_Estate_Agencies.Views.StatusBadge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <Border CornerRadius="10" Padding="6,3" Margin="6"
            HorizontalAlignment="Center">
        <TextBlock Text="{Binding Status, ElementName=Root}"
                   Foreground="White"
                   FontWeight="SemiBold"
                   FontSize="12"
                   HorizontalAlignment="Center"/>
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="Gray"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Status, ElementName=Root}" Value="Paid">
                        <Setter Property="Background" Value="Green"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status, ElementName=Root}" Value="Pending">
                        <Setter Property="Background" Value="Orange"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status, ElementName=Root}" Value="Processing">
                        <Setter Property="Background" Value="MediumPurple"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status, ElementName=Root}" Value="Released">
                        <Setter Property="Background" Value="LightBlue"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
    </Border>
</UserControl>