<Page x:Class="Real_Estate_Agencies.PayrollPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PayrollPage"
      Background="#F8FAFC">

    <Page.Resources>
        <!-- Same palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>

        <!-- Table header -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Table cell -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Action buttons -->
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Add button -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Search + Add -->
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Payroll list -->
                <RowDefinition Height="Auto"/>
                <!-- Pagination -->
            </Grid.RowDefinitions>

            <!-- Search + Add -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search bar -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="{StaticResource Gray200}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="🔍" FontSize="14" Margin="12,0,8,0" VerticalAlignment="Center" Foreground="{StaticResource Gray400}"/>
                        <TextBox Grid.Column="1" x:Name="SearchTextBox" 
                                 Background="Transparent" BorderThickness="0" 
                                 FontSize="14" Padding="0,12"
                                 VerticalAlignment="Center" Foreground="{StaticResource Gray800}"/>
                        <TextBlock Grid.Column="1" Text="Search payroll..." x:Name="PlaceholderText"
                                   Foreground="{StaticResource Gray400}" IsHitTestVisible="False" 
                                   VerticalAlignment="Center" Margin="0,12"/>
                    </Grid>
                </Border>

                <!-- Add Payroll -->
                <Button Grid.Column="1" Content="+ Add Payroll" Style="{StaticResource AddButtonStyle}" 
                        Click="AddPayroll_Click" Margin="16,0,0,0"/>
            </Grid>

            <!-- Table header -->
            <Border Grid.Row="1" Background="White" CornerRadius="8,8,0,0" BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0">
                <Grid Background="{StaticResource Gray50}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.7*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Payroll ID" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="1" Text="Agent ID" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="2" Text="Period" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="3" Text="Basic Pay" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="4" Text="Deductions" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="5" Text="Net Pay" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="6" Text="Release Date" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="7" Text="Action" Style="{StaticResource HeaderTextStyle}"/>
                </Grid>
            </Border>

            <!-- Payroll list -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="White">
                <Border CornerRadius="0,0,8,8" BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1">
                    <ItemsControl x:Name="PayrollDataGrid" ItemsSource="{Binding Payrolls}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" BorderBrush="{StaticResource Gray100}" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.7*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="0.7*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding PayrollID}" Style="{StaticResource CellTextStyle}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding AgentID}" Style="{StaticResource CellTextStyle}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Period}" Style="{StaticResource CellTextStyle}"/>
                                        <TextBlock Grid.Column="3" Text="{Binding BasicPay}" Style="{StaticResource CellTextStyle}"/>
                                        <TextBlock Grid.Column="4" Text="{Binding Deductions}" Style="{StaticResource CellTextStyle}"/>
                                        <TextBlock Grid.Column="5" Text="{Binding NetPay}" Style="{StaticResource CellTextStyle}"/>
                                        <TextBlock Grid.Column="6" Text="{Binding ReleaseDate}" Style="{StaticResource CellTextStyle}"/>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="7" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                  
                                            <Button Style="{StaticResource CircularIconButtonStyle}" ToolTip="Delete" Margin="2,0">
                                                <TextBlock Text="🗑️" FontSize="12"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </ScrollViewer>

            <!-- Pagination -->
            <Grid Grid.Row="3" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: record count -->
                <TextBlock Grid.Column="0" Text="Showing 1-3 of 3 payroll records"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource Gray600}" 
                           FontSize="12"
                           Margin="0,0,16,0"
                           HorizontalAlignment="Left"/>

                <!-- Center: pagination -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Width="32" Height="32"
                            Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="1" Width="32" Height="32"
                            Background="{StaticResource PrimaryBlue}" 
                            Foreground="White" 
                            Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Width="32" Height="32"
                            Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Page>
