<Page x:Class="Real_Estate_Agencies.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:local="clr-namespace:Real_Estate_Agencies"
      xmlns:converter="clr-namespace:Real_Estate_Agencies.Converter"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

      Title="DashboardPage"
      Background="#F5F5F5">

    <Page.Resources>
        <!-- ✅ Converters -->
        <converter:StaggerDelayConverter x:Key="DelayConverter"/>
        <converter:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>
        <converter:Base64ToImageConverter x:Key="Base64ToImageConverter"/>



        <!-- KPI Card Style -->
        <Style x:Key="KpiCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="5" Opacity="0.1" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Property Card Hover Animation -->
        <Style x:Key="PropertyCardStyle" TargetType="Border">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="8" Opacity="0" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1.05" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1.05" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.(DropShadowEffect.Opacity)"
                                                 To="0.3" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.(DropShadowEffect.Opacity)"
                                                 To="0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid x:Name="MainGrid">

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20">


                <!-- ========================= -->
                <!-- DASHBOARD HEADER -->
                <!-- ========================= -->
                <Grid Margin="20,0,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Welcome Card -->
                    <Border CornerRadius="25" Padding="0" BorderBrush="#E0E0E0" BorderThickness="1"
            HorizontalAlignment="Left" VerticalAlignment="Top" Height="120" Width="280" Margin="-19,15,0,0">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.2" ShadowDepth="3"/>
                        </Border.Effect>

                        <Grid>
                            <!-- Rounded Clip for the Image -->
                            <Image Source="C:\Users\maria\Pictures\Screenshots\Screenshot 2025-09-24 182619.png"
                   Stretch="Fill">
                                <Image.Clip>
                                    <RectangleGeometry RadiusX="26" RadiusY="26" Rect="0,0,280,120"/>
                                </Image.Clip>
                            </Image>

                            <!-- Semi-transparent overlay -->
                            <Rectangle Fill="#19000000" RadiusX="25" RadiusY="25"/>

                            <!-- Text Content -->
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="15,0,0,0">
                                <TextBlock Text="Welcome, Admin" FontSize="25" FontWeight="Bold" Foreground="White" Margin="0,0,0,5">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="4" Opacity="0.6" ShadowDepth="1"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CurrentDate}" FontSize="14" Foreground="White">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="3" Opacity="0.6" ShadowDepth="1"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    <TextBlock Text=" • " FontSize="12" Foreground="White" Margin="4,0">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="3" Opacity="0.6" ShadowDepth="1"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    <TextBlock Text="{Binding CurrentTime}" FontSize="14" Foreground="White">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="3" Opacity="0.6" ShadowDepth="1"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <!-- ERP KPI Metrics Section -->


                    <!-- Fixed Analog Clock -->
                    <Canvas x:Name="AnalogClock"
                        Grid.Column="1"
                        Width="140" Height="140"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,30,500,0">

                        <Ellipse Width="140" Height="140" StrokeThickness="0">
                            <Ellipse.Fill>
                                <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                    <GradientStop Color="#FFFFFF" Offset="0"/>
                                    <GradientStop Color="#E0E0E0" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <Canvas x:Name="HourMarks" Width="140" Height="140"/>
                        <Line x:Name="HourHand" X1="70" Y1="70" X2="70" Y2="40" Stroke="#333" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                        <Line x:Name="MinuteHand" X1="70" Y1="70" X2="70" Y2="25" Stroke="#666" StrokeThickness="2.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                        <Line x:Name="SecondHand" X1="70" Y1="70" X2="70" Y2="15" Stroke="#FF5252" StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                        <Ellipse Width="6" Height="6" Fill="#333" Canvas.Left="67" Canvas.Top="67"/>
                    </Canvas>




                    <Grid Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,0,0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- KPI Cards: Property Sales, Agents, Commission, Properties Listed -->


                        <!-- Example: Property Sales -->
                        <Border Grid.Row="0" Grid.Column="0"
                      Style="{StaticResource KpiCardStyle}"
                      Width="220" Margin="5"
                      Cursor="Hand"
                      MouseLeftButtonDown="PropertySalesCard_Click">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform1" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform1" Storyboard.TargetProperty="ScaleX" To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform1" Storyboard.TargetProperty="ScaleY" To="1.05" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform1" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform1" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>

                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Home" Width="28" Height="28" Foreground="#3B82F6" HorizontalAlignment="Center"/>
                                <TextBlock Text="Property Sales" Foreground="Gray" FontSize="12" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding DashboardData.SalesCount}" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>


                        <Border Grid.Row="0" Grid.Column="1"
        Style="{StaticResource KpiCardStyle}"
        Width="220" Margin="5"
        Cursor="Hand"
        MouseLeftButtonDown="AgentsCard_Click">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform2" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform2" Storyboard.TargetProperty="ScaleX" To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform2" Storyboard.TargetProperty="ScaleY" To="1.05" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform2" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform2" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>

                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="AccountMultiple" Width="28" Height="28" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                <TextBlock Text="Agents" Foreground="Gray" FontSize="12" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding DashboardData.AgentCount}" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>


                        <!-- Commission -->
                        <Border Grid.Row="1" Grid.Column="0"
        Style="{StaticResource KpiCardStyle}"
        Width="220" Margin="5"
        Cursor="Hand"
        MouseLeftButtonDown="CommissionCard_Click">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform3" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform3" Storyboard.TargetProperty="ScaleX" To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform3" Storyboard.TargetProperty="ScaleY" To="1.05" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform3" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform3" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>

                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="CashMultiple" Width="28" Height="28" Foreground="#10B981" HorizontalAlignment="Center"/>
                                <TextBlock Text="Commission" Foreground="Gray" FontSize="12" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding DashboardData.Commission}" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>


                        <!-- Properties Listed -->
                        <Border Grid.Row="1" Grid.Column="1"
        Style="{StaticResource KpiCardStyle}"
        Width="220" Margin="5"
        MouseLeftButtonDown="PropertiesCard_Click">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform4" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform4" Storyboard.TargetProperty="ScaleX" To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform4" Storyboard.TargetProperty="ScaleY" To="1.05" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform4" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ScaleTransform4" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>

                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="HomeCity" Width="28" Height="28" Foreground="#EF4444" HorizontalAlignment="Center"/>
                                <TextBlock Text="Properties Listed" Foreground="Gray" FontSize="12" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding DashboardData.PropertiesCount}" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>


                    </Grid>
                </Grid>

                <!-- MAIN CONTENT -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Top Properties -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Top Properties" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" Foreground="#333"/>
                        <ScrollViewer x:Name="TopPropertiesScrollViewer"
                  HorizontalScrollBarVisibility="Hidden"
                  VerticalScrollBarVisibility="Disabled"
                  Height="320"
                  PanningMode="HorizontalOnly"
                  CanContentScroll="True"
                  Loaded="TopPropertiesScrollViewer_Loaded"
                  PreviewMouseWheel="PropertyScrollViewer_PreviewMouseWheel">
                            <ItemsControl x:Name="TopPropertiesItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource PropertyCardStyle}"
                            Background="White"
                            CornerRadius="15"
                            Margin="6"
                            Padding="10"
                            Width="220"
                            Height="300"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Opacity="1">
                                            <StackPanel>
                                                <Border CornerRadius="10" BorderThickness="1" BorderBrush="#DDD" Height="140" Margin="0,0,0,8">
                                                    <Image Source="{Binding ImagePath, Converter={StaticResource Base64ToImageConverter}}" Stretch="UniformToFill" ClipToBounds="True"/>

                                                </Border>
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Location}" FontSize="12" Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding PropertyType}" FontSize="12" Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding Category}" FontSize="12" Margin="0,2,0,0"/>
                                                <Border Background="#F0F0F0" CornerRadius="8" Padding="4" HorizontalAlignment="Left" Margin="0,8,0,0">
                                                    <TextBlock Text="{Binding Status}" FontSize="12" Foreground="#333"/>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>


                    <!-- Divider -->
                    <Border Grid.Column="1" Background="#DDDDDD" Width="2"/>

                    <!-- Charts Section -->
                    <Grid Grid.Column="2" Margin="10,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Pie Chart -->
                        <Grid Grid.Column="0" MinHeight="400">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Property Type Distribution" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                            <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="10" BorderBrush="#E0E0E0" BorderThickness="1">
                                <lvc:PieChart Grid.Row="1"
                                          Series="{Binding PieSeries}"
                                          LegendPosition="Right"
                                          TooltipPosition="Top"
                                          Padding="8"/>
                            </Border>
                        </Grid>

                        <!-- Line Chart -->
                        <Grid Grid.Column="1" MinHeight="400">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Sales Over Time" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                            <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="10" BorderBrush="#E0E0E0" BorderThickness="1">
                                <lvc:CartesianChart Grid.Row="1"
                                                Series="{Binding SalesOverTimeSeries}"
                                                XAxes="{Binding SalesXAxes}"
                                                YAxes="{Binding SalesYAxes}"
                                                Padding="8"/>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- NEW FEATURES -->
                <StackPanel Margin="0,40,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Main Grid: 2 Columns (Left: Top Agents, Right: Recent Sales) -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100*"/>
                                <ColumnDefinition Width="0*"/>
                            </Grid.ColumnDefinitions>

                            <!-- LEFT: Top Agents -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <!-- Title outside the frame -->
                                <TextBlock Text="🏆 Top Agents"
               FontSize="18"
               FontWeight="Bold"
               Foreground="#2D3748"
               Margin="0,0,0,10"/>

                                <!-- Frame -->
                                <Border Background="White"
            CornerRadius="20"
            Padding="25"
            BorderBrush="#E5E7EB"
            BorderThickness="1"
            Height="422"
            Effect="{DynamicResource DropShadowEffect}">

                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel>

                                            <!-- Small header phrase inside frame -->
                                            <TextBlock Text="Our Top Performing Agents ✨"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#4B5563"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                                            <ItemsControl ItemsSource="{Binding TopAgents}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Vertical" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button Click="Agent_Click"
                                    Tag="{Binding Name}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0"
                                    Margin="0,0,0,12"
                                    Cursor="Hand">
                                                            <Button.RenderTransform>
                                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                            </Button.RenderTransform>

                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Setter Property="BorderThickness" Value="0"/>
                                                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                                                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="#F3F4F6"/>
                                                                                        <Setter Property="RenderTransform">
                                                                                            <Setter.Value>
                                                                                                <ScaleTransform ScaleX="1.03" ScaleY="1.03"/>
                                                                                            </Setter.Value>
                                                                                        </Setter>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Button.Style>

                                                            <!-- Agent Card -->
                                                            <Border Background="#F9FAFB"
                                        CornerRadius="12"
                                        Padding="12"
                                        BorderBrush="#E5E7EB"
                                        BorderThickness="1">
                                                                <DockPanel VerticalAlignment="Center">
                                                                    <!-- Circle with Initials -->
                                                                    <Grid Width="42" Height="42" DockPanel.Dock="Left">
                                                                        <Ellipse Fill="#3B82F6"/>
                                                                        <TextBlock Text="{Binding Initials}"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                                                    </Grid>

                                                                    <!-- Agent Info -->
                                                                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                                                        <TextBlock Text="{Binding Name}"
                                                       FontSize="13.5"
                                                       FontWeight="SemiBold"
                                                       Foreground="#1F2937"/>
                                                                        <TextBlock Text="{Binding TotalSales, StringFormat=Sales: {0}}"
                                                       FontSize="11.5"
                                                       Foreground="#6B7280"/>
                                                                    </StackPanel>


                                                                </DockPanel>
                                                            </Border>
                                                        </Button>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </StackPanel>




                        </Grid>




                        <!-- DataGrid -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Recent Sales" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                            <Border Background="White" CornerRadius="12" Padding="10" BorderBrush="#E0E0E0" BorderThickness="1">
                                <DataGrid ItemsSource="{Binding RecentSales}" AutoGenerateColumns="False" CanUserAddRows="False"
                                      CanUserDeleteRows="False" IsReadOnly="True" HeadersVisibility="Column" Height="400"
                                      RowBackground="White" AlternatingRowBackground="#F9F9F9" GridLinesVisibility="Horizontal" BorderThickness="0">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Client" Binding="{Binding Client}" Width="*"/>
                                        <DataGridTextColumn Header="Property" Binding="{Binding Property}" Width="*"/>
                                        <DataGridTextColumn Header="Agent" Binding="{Binding Agent}" Width="*"/>
                                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </StackPanel>


                    </Grid>
                </StackPanel>


                <!-- ENHANCED ANALYTICS SECTION -->
                <StackPanel Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <!-- Left: Top Agents -->
                            <ColumnDefinition Width="3*"/>
                            <!-- Right: KPI Cards -->
                        </Grid.ColumnDefinitions>




                        <!-- KPI Cards (Right) -->
                        <Grid Grid.Column="0" Margin="0,5,0,0" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Total Transactions -->
                            <Border Grid.Column="0" Height="140" Background="White" CornerRadius="12" Margin="5" Padding="15"
            BorderBrush="#E0E0E0" BorderThickness="1" Cursor="Hand">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="SwapHorizontal" Width="36" Height="36" Foreground="#3B82F6" />
                                    <TextBlock Text="Total Transactions" Foreground="#6B7280" FontSize="14" Margin="0,8,0,0" TextAlignment="Center" />
                                    <TextBlock Text="{Binding SecondaryData.TotalTransactions}" 
                       FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>

                            <!-- Active Agents -->
                            <Border Grid.Column="1" Height="140" Background="White" CornerRadius="12" Margin="5" Padding="15"
            BorderBrush="#E0E0E0" BorderThickness="1" Cursor="Hand">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="AccountSupervisorCircle" Width="36" Height="36" Foreground="#F59E0B" />
                                    <TextBlock Text="Active Agents" Foreground="#6B7280" FontSize="14" Margin="0,8,0,0" TextAlignment="Center" />
                                    <TextBlock Text="{Binding SecondaryData.ActiveAgents}" 
                       FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>

                            <!-- Pending Commissions -->
                            <Border Grid.Column="2" Height="140" Background="White" CornerRadius="12" Margin="5" Padding="15"
            BorderBrush="#E0E0E0" BorderThickness="1" Cursor="Hand">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="CashMultiple" Width="36" Height="36" Foreground="#10B981" />
                                    <TextBlock Text="Pending Commissions" Foreground="#6B7280" FontSize="14" Margin="0,8,0,0" TextAlignment="Center" TextWrapping="Wrap" />
                                    <TextBlock Text="{Binding SecondaryData.PendingCommissions, StringFormat=₱{0:N0}}" 
                       FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </Grid>

                    </Grid>
                </StackPanel>


            </StackPanel>
        </ScrollViewer>
    </Grid>

</Page>
