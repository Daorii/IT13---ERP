<Page x:Class="Real_Estate_Agencies.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:local="clr-namespace:Real_Estate_Agencies"
      Title="DashboardPage"
      Background="#F5F5F5">

    <Page.Resources>
            <local:StaggerDelayConverter x:Key="DelayConverter"/>

        <Style x:Key="PropertyCardStyle" TargetType="Border">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="8" Opacity="0" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1.05" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1.05" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.(DropShadowEffect.Opacity)"
                                                 To="0.3" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.(DropShadowEffect.Opacity)"
                                                 To="0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- HEADER -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#FFF9C4" CornerRadius="20"
                        Padding="8,6" BorderBrush="#E0E0E0" BorderThickness="1" 
                        Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="90" Width="400">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="Welcome, Admin" FontSize="25" FontWeight="Bold" Foreground="#333" Margin="0,0,0,2"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentDate}" FontSize="10" Foreground="#555"/>
                            <TextBlock Text=" • " FontSize="10" Foreground="#555" Margin="4,0"/>
                            <TextBlock Text="{Binding CurrentTime}" FontSize="10" Foreground="#555"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Grid Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource KpiCardStyle}" Width="280" Margin="1,3,7,3">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Property Sales" Foreground="Gray" FontSize="11"/>
                            <TextBlock Text="{Binding DashboardData.SalesCount}" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource KpiCardStyle}" Width="280" Margin="0,3,6,3">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Agents" Foreground="Gray" FontSize="11"/>
                            <TextBlock Text="{Binding DashboardData.AgentCount}" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource KpiCardStyle}" Width="280" Margin="1,3,7,3">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Commission" Foreground="Gray" FontSize="11"/>
                            <TextBlock Text="{Binding DashboardData.Commission}" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource KpiCardStyle}" Width="280" Margin="0,3,6,3">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Properties" Foreground="Gray" FontSize="11"/>
                            <TextBlock Text="{Binding DashboardData.PropertiesListed}" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- MAIN CONTENT -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Top Properties" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" Foreground="#333"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Disabled"
                                  Height="400"
                                  PanningMode="HorizontalOnly"
                                  CanContentScroll="True"
                                  PreviewMouseWheel="PropertyScrollViewer_PreviewMouseWheel">
                        <ItemsControl ItemsSource="{Binding OnSellProperties}" AlternationCount="50">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" IsItemsHost="True"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource PropertyCardStyle}"
                                            Background="White" 
                                            CornerRadius="15" 
                                            Margin="6" Padding="10"
                                            MinWidth="200" MaxWidth="280"
                                            MinHeight="250" MaxHeight="320"
                                            BorderBrush="#E0E0E0" BorderThickness="1"
                                            Opacity="0">
                                        <StackPanel>
                                            <Border CornerRadius="10" BorderThickness="1" BorderBrush="#DDD" Margin="0,0,0,8" Height="120">
                                                <Image Source="{Binding ImagePath}" Stretch="UniformToFill" ClipToBounds="True" />
                                            </Border>

                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Location}" FontSize="12" Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding Type}" FontSize="12" Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding Category}" FontSize="12" Margin="0,2,0,0"/>

                                            <Border Background="#F0F0F0" CornerRadius="8" Padding="4" HorizontalAlignment="Left" Margin="0,8,0,0">
                                                <TextBlock Text="{Binding Status}" FontSize="12" Foreground="#333"/>
                                            </Border>
                                        </StackPanel>

                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                         From="0" To="1"
                                                                         Duration="0:0:0.5"
                                                                         BeginTime="{Binding RelativeSource={RelativeSource Self}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource DelayConverter}}"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                         From="0.95" To="1"
                                                                         Duration="0:0:0.5"
                                                                         BeginTime="{Binding RelativeSource={RelativeSource Self}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource DelayConverter}}"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                         From="0.95" To="1"
                                                                         Duration="0:0:0.5"
                                                                         BeginTime="{Binding RelativeSource={RelativeSource Self}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource DelayConverter}}"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Border.Triggers>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>

                <Border Grid.Column="1" Background="#DDDDDD" Width="2" Margin="0,0"/>

                <Grid Grid.Column="2" Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" MinHeight="350">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Property Type Distribution" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#333" 
                                   HorizontalAlignment="Left" 
                                   Margin="0,0,0,10"/>

                        <lvc:PieChart Grid.Row="1"
                                      Series="{Binding PieSeries}"
                                      LegendPosition="Right"
                                      TooltipPosition="Top"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"/>
                    </Grid>

                    <Grid Grid.Column="1" MinHeight="350">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Sales Over Time" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#333" 
                                   HorizontalAlignment="Left" 
                                   Margin="0,0,0,10"/>

                        <lvc:CartesianChart Grid.Row="1"
                                            Series="{Binding SalesOverTimeSeries}"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"/>
                    </Grid>
                </Grid>

            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>
