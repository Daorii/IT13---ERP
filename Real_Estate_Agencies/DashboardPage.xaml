    <Page x:Class="Real_Estate_Agencies.DashboardPage"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
          Title="DashboardPage"
          Background="#F5F5F5">

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20">

                <!-- HEADER -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Welcome Card -->
                    <Border Grid.Column="0" Background="#FFF9C4" CornerRadius="12"
                            Padding="8,6" BorderBrush="#E0E0E0" BorderThickness="1" 
                            Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="Welcome, Admin" FontSize="12" FontWeight="Bold" Foreground="#333" Margin="0,0,0,2"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentDate}" FontSize="10" Foreground="#555"/>
                                <TextBlock Text=" • " FontSize="10" Foreground="#555" Margin="4,0"/>
                                <TextBlock Text="{Binding CurrentTime}" FontSize="10" Foreground="#555"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- KPI Cards Top-Right -->
                    <Grid Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource KpiCardStyle}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Property Sales" Foreground="Gray" FontSize="11"/>
                                <TextBlock Text="{Binding DashboardData.SalesCount}" FontSize="15" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource KpiCardStyle}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Agents" Foreground="Gray" FontSize="11"/>
                                <TextBlock Text="{Binding DashboardData.AgentCount}" FontSize="15" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource KpiCardStyle}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Commission" Foreground="Gray" FontSize="11"/>
                                <TextBlock Text="{Binding DashboardData.Commission}" FontSize="15" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource KpiCardStyle}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Properties" Foreground="Gray" FontSize="11"/>
                                <TextBlock Text="{Binding DashboardData.PropertiesListed}" FontSize="15" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>

                <!-- CONTENT -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="2.2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT: On Sell Properties -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="On Sell Properties" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" Foreground="#333"/>
                        <ScrollViewer x:Name="PropertyScrollViewer"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Disabled"
                                      Height="260"
                                      PanningMode="HorizontalOnly"
                                      CanContentScroll="False"
                                      PreviewMouseWheel="PropertyScrollViewer_PreviewMouseWheel">
                            <ItemsControl ItemsSource="{Binding OnSellProperties}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" CornerRadius="12" Margin="6" Padding="10" Width="220" Height="240" BorderBrush="#E0E0E0" BorderThickness="1">
                                            <StackPanel>
                                                <Image Source="{Binding ImagePath}" Height="120" Stretch="UniformToFill" Margin="0,0,0,8"/>
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Price}" FontSize="13" Margin="0,4,0,0"/>
                                                <Border Background="#F0F0F0" CornerRadius="8" Padding="4" HorizontalAlignment="Left" Margin="0,8,0,0">
                                                    <TextBlock Text="{Binding Status}" FontSize="12" Foreground="#333"/>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                    <!-- DIVIDER -->
                    <Border Grid.Column="1" Background="#DDDDDD" Width="2" Margin="10,0"/>

                    <!-- RIGHT: Pie Chart -->
                    <lvc:PieChart Grid.Column="2"
                                  Series="{Binding PieSeries}"
                                  Width="300"
                                  Height="300"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Page>
