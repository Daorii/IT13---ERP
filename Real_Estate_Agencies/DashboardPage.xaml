<Page x:Class="Real_Estate_Agencies.PropertiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Real_Estate_Agencies"
      Title="PropertiesPage"
      Background="#F8FAFC">

    <Page.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>
        <SolidColorBrush x:Key="Gray900" Color="#111827"/>

        <!-- Status Colors -->
        <SolidColorBrush x:Key="OccupiedBg" Color="#FEF3C7"/>
        <SolidColorBrush x:Key="OccupiedFg" Color="#92400E"/>
        <SolidColorBrush x:Key="VacantBg" Color="#D1FAE5"/>
        <SolidColorBrush x:Key="VacantFg" Color="#065F46"/>
        <SolidColorBrush x:Key="MaintenanceBg" Color="#E0E7FF"/>
        <SolidColorBrush x:Key="MaintenanceFg" Color="#3730A3"/>

        <!-- TextBlock Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Modern Circular Icon Button -->
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Add Property Button Style -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header & Search -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="{StaticResource Gray200}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="🔍" FontSize="14" Margin="12,0,8,0" VerticalAlignment="Center" Foreground="{StaticResource Gray400}"/>
                        <TextBox Grid.Column="1" Name="SearchTextBox" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="Transparent" BorderThickness="0" FontSize="14" Padding="0,12" 
                                 VerticalAlignment="Center" Foreground="{StaticResource Gray800}"/>
                        <TextBlock Grid.Column="1" Text="Search properties..." 
                                   Foreground="{StaticResource Gray400}" 
                                   IsHitTestVisible="False" 
                                   VerticalAlignment="Center"
                                   Margin="0,12,0,12"
                                   Name="PlaceholderText"/>
                    </Grid>
                </Border>

                <Button Grid.Column="1" Content="+ Add Property" Style="{StaticResource AddButtonStyle}" 
                        Click="Add_Click" Margin="16,0,0,0"/>
            </Grid>

            <!-- Table Header -->
            <Border Grid.Row="1" Background="White" CornerRadius="8,8,0,0" BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0">
                <Grid Background="{StaticResource Gray50}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*" MinWidth="150"/>
                        <ColumnDefinition Width="*" MinWidth="150"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="No" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="1" Text="Image" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="2" Text="Property ID" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="3" Text="Property Name" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="4" Text="Property Address" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="5" Text="Property Type" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="6" Text="Status" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="7" Text="Rent" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Grid.Column="8" Text="Action" Style="{StaticResource HeaderTextStyle}"/>
                </Grid>
            </Border>

            <!-- Property List -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Background="White">
                <Border CornerRadius="0,0,8,8" BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1">
                    <ItemsControl ItemsSource="{Binding FilteredProperties}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" BorderBrush="{StaticResource Gray100}" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <TextBlock Grid.Column="0" Text="1" Style="{StaticResource CellTextStyle}" HorizontalAlignment="Center"/>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*" MinWidth="150"/>
                                            <ColumnDefinition Width="*" MinWidth="150"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="140"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="1" Style="{StaticResource CellTextStyle}" HorizontalAlignment="Center"/>

                                        <!-- Image -->
                                        <Border Grid.Column="1" Width="60" Height="40" CornerRadius="4" Background="{StaticResource Gray100}" 
                                                BorderBrush="{StaticResource Gray200}" BorderThickness="1" Margin="10,8">
                                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill" ClipToBounds="True"/>
                                        </Border>

                                        <TextBlock Grid.Column="2" Text="{Binding Code}" Style="{StaticResource CellTextStyle}" 
                                                   Foreground="{StaticResource Gray600}" FontFamily="Consolas" FontSize="11"/>
                                        <TextBlock Grid.Column="3" Text="{Binding Name}" Style="{StaticResource CellTextStyle}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="4" Text="{Binding Location}" Style="{StaticResource CellTextStyle}"/>
                                        <TextBlock Grid.Column="5" Text="{Binding PropertyType}" Style="{StaticResource CellTextStyle}"/>

                                        <!-- Status Badge -->
                                        <Grid Grid.Column="6">
                                            <Border Margin="12,0">
                                                <Border.Style>
                                                    <Style TargetType="Border" BasedOn="{StaticResource StatusBadgeStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Occupied">
                                                                <Setter Property="Background" Value="{StaticResource OccupiedBg}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Vacant">
                                                                <Setter Property="Background" Value="{StaticResource VacantBg}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Under Maintenance">
                                                                <Setter Property="Background" Value="{StaticResource MaintenanceBg}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Status}" FontSize="10" FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Occupied">
                                                                    <Setter Property="Foreground" Value="{StaticResource OccupiedFg}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Vacant">
                                                                    <Setter Property="Foreground" Value="{StaticResource VacantFg}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Under Maintenance">
                                                                    <Setter Property="Foreground" Value="{StaticResource MaintenanceFg}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </Grid>

                                        <TextBlock Grid.Column="7" Text="{Binding Price, StringFormat='{}{0:C0}/month'}" Style="{StaticResource CellTextStyle}"/>

                                        <!-- Actions: Circular Icon Buttons -->
                                        <StackPanel Grid.Column="8" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                                            <Button Style="{StaticResource CircularIconButtonStyle}" Click="View_Click" CommandParameter="{Binding}" ToolTip="View" Margin="2,0">
                                                <TextBlock Text="✏️" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Button>
                                            <Button Style="{StaticResource CircularIconButtonStyle}" Click="Delete_Click" CommandParameter="{Binding}" ToolTip="Delete" Margin="2,0">
                                                <TextBlock Text="🗑️" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Button>
                                        </StackPanel>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </ScrollViewer>

            <!-- Pagination -->
            <Grid Grid.Row="3" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding PaginationText}" VerticalAlignment="Center" 
                           Foreground="{StaticResource Gray600}" FontSize="12"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="❮" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" 
                            Click="PreviousPage_Click" Margin="2,0"/>
                    <Button Content="1" Width="32" Height="32" Background="{StaticResource PrimaryBlue}" 
                            Foreground="White" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="2" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="3" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <TextBlock Text="..." VerticalAlignment="Center" Margin="8,0" Foreground="{StaticResource Gray400}"/>
                    <Button Content="20" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" 
                            Click="NextPage_Click" Margin="2,0"/>
                </StackPanel>
            </Grid>

        </Grid>
    </Border>
</Page>