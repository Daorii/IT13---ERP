<Window x:Class="Real_Estate_Agencies.AddPaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Payment"
        Width="400" Height="500"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Grid Background="Transparent">
        <!-- Card -->
        <Border Background="#FFE9F7FF"
                CornerRadius="16"
                Padding="25"
                BorderBrush="#FFCCE7F5"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="LightBlue"
                                  BlurRadius="25"
                                  ShadowDepth="0"
                                  Opacity="0.35"/>
            </Border.Effect>

            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Payment"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#FF3A4A60"
                           Margin="0,0,0,24"
                           HorizontalAlignment="Center"/>

                <!-- Payment ID -->


                <!-- Amount -->
                <TextBlock Text="Amount" FontWeight="SemiBold" Foreground="#444"/>
                <TextBox x:Name="TxtAmount" Margin="0,5,0,12" Padding="8"/>

                <!-- Payment Date -->
                <TextBlock Text="Payment Date" FontWeight="SemiBold" Foreground="#444"/>
                <DatePicker x:Name="PaymentDatePicker" Margin="0,5,0,12" Height="32"/>

                <!-- Method -->
                <TextBlock Text="Payment Type" FontWeight="SemiBold" Foreground="#444"/>
                <ComboBox x:Name="PaymentMethodComboBox" Margin="0,5,0,12" Padding="6">
                    <ComboBoxItem Content="Cash" IsSelected="True"/>
                    <ComboBoxItem Content="Bank Transfer"/>
                    <ComboBoxItem Content="Cheque"/>
                </ComboBox>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Cancel" Width="100" Height="36"
                            Margin="0,0,12,0"
                            Background="#FFE9F7FF"
                            Foreground="Black"
                            BorderBrush="#FFAACDEB"
                            BorderThickness="1"
                            Click="Cancel_Click"/>

                    <Button Content="Add" Width="100" Height="36"
                            Background="#FFFFE08F"
                            Foreground="Black"
                            FontWeight="Bold"
                            BorderBrush="#FFE6C96D"
                            BorderThickness="1"
                            Click="Save_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Button Content="✖"
                Width="28" Height="28"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Background="Transparent"
                Foreground="Red"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="Cancel_Click"/>
    </Grid>
</Window>
