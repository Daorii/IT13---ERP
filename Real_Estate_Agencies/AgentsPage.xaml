<Page x:Class="Real_Estate_Agencies.AgentsPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:conv="clr-namespace:Real_Estate_Agencies.Converter" Title="AgentsPage" Background="#F8FAFC">
    <Page.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Search + Add -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                
                <!-- Search -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="{StaticResource Gray200}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Icon -->
                        <TextBlock Grid.Column="0" Text="🔍" FontSize="14" Margin="12,0,8,0" VerticalAlignment="Center" Foreground="{StaticResource Gray400}"/>

                        <!-- Search TextBox -->
                        <TextBox Grid.Column="1" x:Name="SearchTextBox" Background="Transparent" BorderThickness="0" FontSize="14" Padding="0,12" VerticalAlignment="Center" Foreground="{StaticResource Gray800}"
                 TextChanged="SearchTextBox_TextChanged"
                 GotFocus="SearchTextBox_GotFocus"
                 LostFocus="SearchTextBox_LostFocus"/>

                        <!-- Placeholder -->
                        <TextBlock Grid.Column="1" x:Name="PlaceholderText" Text="Search agents..." Foreground="{StaticResource Gray400}" IsHitTestVisible="False" VerticalAlignment="Center" Margin="0,12"/>
                    </Grid>
                </Border>

                <!-- Add Agent -->
                <Button Grid.Column="1" Content="+ Add Agent" Style="{StaticResource AddButtonStyle}" Click="AddAgent_Click" Margin="16,0,0,0"/>
            </Grid>
            <!-- Table -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Header -->
                <Border Background="{StaticResource Gray50}" CornerRadius="8,8,0,0" BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0" Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Agent" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="First Name" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="2" Text="Last Name" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="3" Text="Hire Date" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="4" Text="Contact Info" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="5" Text="Action" Style="{StaticResource HeaderTextStyle}"/>
                    </Grid>
                </Border>
                <!-- Agent List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Border CornerRadius="0,0,8,8" BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1">
                        <ItemsControl ItemsSource="{Binding Agents}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Make the whole row clickable -->
                                    <Button Background="Transparent" BorderThickness="0"
                CommandParameter="{Binding}"
                Click="ViewAgentDetails_Click"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Cursor="Hand">

                                        <Border Background="White" BorderBrush="{StaticResource Gray100}" BorderThickness="0,0,0,1">
                                            <Grid VerticalAlignment="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Agent Image -->
                                                <Border Grid.Column="0" Width="50" Height="50" BorderBrush="Gray" BorderThickness="1"
                            CornerRadius="25" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4">
                                                    <Image Source="{Binding ProfileBitmap}" Stretch="UniformToFill" Width="50" Height="50">
                                                        <Image.Clip>
                                                            <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
                                                        </Image.Clip>
                                                    </Image>
                                                </Border>

                                                <!-- Agent Info -->
                                                <TextBlock Grid.Column="1" Text="{Binding FirstName}" Style="{StaticResource CellTextStyle}" HorizontalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="{Binding LastName}" Style="{StaticResource CellTextStyle}" HorizontalAlignment="Center"/>
                                                <TextBlock Grid.Column="3" Text="{Binding HireDate}" Style="{StaticResource CellTextStyle}" HorizontalAlignment="Center"/>
                                                <TextBlock Grid.Column="4" Text="{Binding ContactInfo}" Style="{StaticResource CellTextStyle}" HorizontalAlignment="Center"/>

                                                <!-- Actions -->
                                                <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button Style="{StaticResource CircularIconButtonStyle}" ToolTip="Edit" Margin="2,0"
                                Click="EditAgent_Click" CommandParameter="{Binding}">
                                                        <TextBlock Text="✏️" FontSize="12"/>
                                                    </Button>
                                                    <Button Style="{StaticResource CircularIconButtonStyle}" ToolTip="Delete" Margin="2,0"
                                Click="DeleteAgent_Click" CommandParameter="{Binding}">
                                                        <TextBlock Text="🗑️" FontSize="12"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>

                        </ItemsControl>
                    </Border>
                </ScrollViewer>
            </Grid>
            <!-- Pagination -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Showing 1–5 of agents" VerticalAlignment="Center" Foreground="{StaticResource Gray600}" FontSize="12"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="1" Background="{StaticResource PrimaryBlue}" Foreground="White" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                </StackPanel>
            </Grid>
            
            
            <!-- Edit Agent Overlay -->
            <Grid x:Name="EditAgentOverlay" Grid.RowSpan="3" Background="#80000000" Visibility="Collapsed" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Panel.ZIndex="99">
                <Border Background="White" CornerRadius="16" Padding="30" Width="480" MaxHeight="700" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="16" ShadowDepth="4" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- Close Button -->
                        <Button Content="✕" Width="32" Height="32" FontSize="14" FontWeight="Bold" Background="#F5F6FA" BorderThickness="0" Foreground="#5C677D" HorizontalAlignment="Right" Cursor="Hand" Click="CloseEditAgentOverlay_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                        <!-- Header -->
                        <StackPanel Grid.Row="0" Margin="0,10,0,20">
                            <TextBlock Text="Edit Agent" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="Update agent details" FontSize="13" Foreground="#6C7A89" Margin="0,5,0,0"/>
                        </StackPanel>
                        <!-- Form Content -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">
                                <TextBox x:Name="TxtAgentId" Visibility="Collapsed"/>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="First Name" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtFirstName" Height="40" Padding="10" BorderBrush="#E1E8ED" BorderThickness="1" Background="White" Foreground="#2C3E50" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Last Name" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtLastName" Height="40" Padding="10" BorderBrush="#E1E8ED" BorderThickness="1" Background="White" Foreground="#2C3E50" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Hire Date" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <DatePicker x:Name="DpHireDate" Height="40" Padding="10" BorderBrush="#E1E8ED" BorderThickness="1" Background="White" Foreground="#2C3E50" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Contact Info" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtContact" Height="40" Padding="10" BorderBrush="#E1E8ED" BorderThickness="1" Background="White" Foreground="#2C3E50" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                        <!-- Footer Buttons -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Close" Width="90" Height="40" Background="White" BorderBrush="#D0D5DD" BorderThickness="1" Foreground="#344054" Cursor="Hand" Margin="0,0,12,0" Click="CloseEditAgentOverlay_Click"/>
                            <Button Content="Save Agent" Width="150" Height="40" Background="#4F46E5" BorderThickness="0" Foreground="White" FontWeight="Bold" Cursor="Hand" Click="SaveAgent_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Agent Details Overlay with Glass Background -->
            <Grid x:Name="AgentDetailsOverlay" Grid.RowSpan="3"
      Background="#80FFFFFF"
      Visibility="Collapsed"
      VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Panel.ZIndex="98">

                <Border Background="#CCFFFFFF" CornerRadius="20" Padding="20"
            Width="520" MaxHeight="750"
            VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <!-- Single DropShadowEffect applied -->
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="25" ShadowDepth="5"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Close Button -->
                        <Button Content="✕"
                    Width="36" Height="36" FontSize="16" FontWeight="Bold"
                    Background="#EDF1F7" BorderThickness="0" Foreground="#3E4A59"
                    HorizontalAlignment="Right" Cursor="Hand"
                    Click="CloseAgentDetailsOverlay_Click">
                            <Button.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="6" ShadowDepth="2"/>
                            </Button.Effect>
                        </Button>

                        <!-- Agent Info -->
                        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,0">

                            <!-- Profile Image with Gradient Ring -->
                            <Border Width="110" Height="110" CornerRadius="55" Padding="4" Margin="0,0,0,18">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#3B82F6" Offset="0"/>
                                        <GradientStop Color="#9333EA" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border CornerRadius="50" Background="White" Padding="2">
                                    <Image x:Name="DetailsProfileImage" Stretch="UniformToFill" ClipToBounds="True">
                                        <Image.Clip>
                                            <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
                                        </Image.Clip>
                                    </Image>
                                </Border>
                            </Border>

                            <!-- Name & Contact -->
                            <TextBlock x:Name="DetailsFullName" FontSize="24" FontWeight="Bold" Foreground="#1F2937" TextAlignment="Center"/>
                            <TextBlock x:Name="DetailsContact" FontSize="14" Foreground="#6B7280" TextAlignment="Center" Margin="0,4,0,18"/>

                            <!-- Divider -->
                            <Rectangle Fill="#E5E7EB" Height="1" Width="140" HorizontalAlignment="Center" Margin="0,10,0,20"/>

                            <!-- Details Cards -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Column -->
                                <StackPanel Grid.Column="0" Margin="10,0,20,0">
                                    <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Agent ID" FontWeight="SemiBold" Foreground="#374151"/>
                                            <TextBlock x:Name="DetailsAgentId" Foreground="#111827"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="White" CornerRadius="10" Padding="10">
                                        <StackPanel>
                                            <TextBlock Text="Hire Date" FontWeight="SemiBold" Foreground="#374151"/>
                                            <TextBlock x:Name="DetailsHireDate" Foreground="#111827"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Right Column -->
                                <StackPanel Grid.Column="1" Margin="20,0,10,0">
                                    <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Balance" FontWeight="SemiBold" Foreground="#374151"/>
                                            <TextBlock x:Name="DetailsCommissionBalance" Foreground="#111827"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Unit Sales" FontWeight="SemiBold" Foreground="#374151"/>
                                            <TextBlock x:Name="DetailsUnitSales" Foreground="#111827"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Release Button -->
                                    <!-- Release Button with Rounded Corners -->
                                    <Border CornerRadius="8" Background="#FBBF24" Height="36" Margin="0,12,0,0">
                                        <Button Content="Release" Background="Transparent" Foreground="#111827"
            FontWeight="Bold" BorderThickness="0"
            Click="ReleaseCommission_Click"/>
                                    </Border>

                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Page>