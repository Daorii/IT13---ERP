<Page x:Class="Real_Estate_Agencies.AgentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AgentsPage"
      Background="#F8FAFC">

    <Page.Resources>
        <!-- Reuse same palette as ClientsPage -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>

        <!-- Header text -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Cell text -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Form input styles -->
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Search + Add -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="{StaticResource Gray200}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="🔍" FontSize="14" Margin="12,0,8,0"
                                   VerticalAlignment="Center" Foreground="{StaticResource Gray400}"/>
                        <TextBox Grid.Column="1" x:Name="SearchTextBox" 
                                 Background="Transparent" BorderThickness="0" 
                                 FontSize="14" Padding="0,12"
                                 VerticalAlignment="Center" Foreground="{StaticResource Gray800}"/>
                        <TextBlock Grid.Column="1" Text="Search agents..." x:Name="PlaceholderText"
                                   Foreground="{StaticResource Gray400}" IsHitTestVisible="False" 
                                   VerticalAlignment="Center" Margin="0,12"/>
                    </Grid>
                </Border>

                <!-- Add Agent -->
                <Button Grid.Column="1" Content="+ Add Agent" Style="{StaticResource AddButtonStyle}" 
                        Click="AddAgent_Click" Margin="16,0,0,0"/>
            </Grid>

            <Grid Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header -->
                    <Border Background="White" CornerRadius="8,8,0,0" BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0" Grid.Row="0">
                        <Grid Background="{StaticResource Gray50}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.7*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="No" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="1" Text="Agent ID" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="2" Text="First Name" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="3" Text="Last Name" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="4" Text="Hire Date" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="5" Text="Contact Info" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="6" Text="Salary Rate" Style="{StaticResource HeaderTextStyle}"/>
                            <TextBlock Grid.Column="7" Text="Action" Style="{StaticResource HeaderTextStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Agent List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="White">
                        <Border CornerRadius="0,0,8,8" BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1">
                            <ItemsControl x:Name="AgentsDataGrid" ItemsSource="{Binding Agents}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" BorderBrush="{StaticResource Gray100}" BorderThickness="0,0,0,1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.5*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="0.7*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding No}" Style="{StaticResource CellTextStyle}"/>
                                                <TextBlock Grid.Column="1" Text="{Binding AgentId}" Style="{StaticResource CellTextStyle}" FontFamily="Consolas" FontSize="11"/>
                                                <TextBlock Grid.Column="2" Text="{Binding FirstName}" Style="{StaticResource CellTextStyle}" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="3" Text="{Binding LastName}" Style="{StaticResource CellTextStyle}"/>
                                                <TextBlock Grid.Column="4" Text="{Binding HireDate}" Style="{StaticResource CellTextStyle}"/>
                                                <TextBlock Grid.Column="5" Text="{Binding ContactInfo}" Style="{StaticResource CellTextStyle}"/>
                                                <TextBlock Grid.Column="6" Text="{Binding SalaryRate}" Style="{StaticResource CellTextStyle}"/>

                                                <!-- Actions -->
                                                <StackPanel Grid.Column="7" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Button Style="{StaticResource CircularIconButtonStyle}" ToolTip="Edit" Margin="2,0" 
                                                            Click="EditAgent_Click" CommandParameter="{Binding}">
                                                        <TextBlock Text="✏️" FontSize="12"/>
                                                    </Button>
                                                    <Button Style="{StaticResource CircularIconButtonStyle}" 
        ToolTip="Delete" 
        Margin="2,0"
        Click="DeleteAgent_Click"
        CommandParameter="{Binding}">
                                                        <TextBlock Text="🗑️" FontSize="12"/>
                                                    </Button>

                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <!-- Pagination -->
            <Grid Grid.Row="3" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Count -->
                <TextBlock Grid.Column="0" Text="Showing 1-2 of 2 agents"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource Gray600}" FontSize="12"
                           Margin="0,0,16,0" HorizontalAlignment="Left"/>

                <!-- Pagination -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Width="32" Height="32"
                            Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="1" Width="32" Height="32"
                            Background="{StaticResource PrimaryBlue}" 
                            Foreground="White" 
                            Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Width="32" Height="32"
                            Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                </StackPanel>
            </Grid>

            <!-- Edit Agent Overlay Popup -->
            <Grid x:Name="EditPopupOverlay"
                  Background="#80000000"
                  Visibility="Collapsed"
                  Grid.RowSpan="4">

                <!-- Clean White Popup -->
                <Border CornerRadius="16" Width="500" MaxHeight="600"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Background="White"
                        BorderThickness="0"
                        Padding="32">

                    <!-- Shadow -->
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.1"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Close Button -->
                        <Button Content="✕"
                                Width="24" Height="24"
                                Background="Transparent"
                                Foreground="{StaticResource Gray400}"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                FontSize="16"
                                Cursor="Hand"
                                Click="CloseEditPopup_Click"
                                Grid.Row="0"
                                Margin="0,-8,-8,0"/>

                        <!-- Title and Description -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,24">
                            <TextBlock Text="Edit Agent"
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource Gray800}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Update agent information and details"
                                       FontSize="14"
                                       Foreground="{StaticResource Gray600}"/>
                        </StackPanel>

                        <!-- Form Content -->
                        <ScrollViewer Grid.Row="2" MaxHeight="400" VerticalScrollBarVisibility="Auto">
                            <StackPanel>

                                <!-- Employee ID -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Employee ID" 
                                               FontSize="14" 
                                               FontWeight="Medium" 
                                               Foreground="{StaticResource Gray800}" 
                                               Margin="0,0,0,8"/>
                                    <TextBox x:Name="EditEmployeeIdTextBox" 
         Style="{StaticResource FormTextBoxStyle}"
         Height="40"
         IsReadOnly="True"
         Background="#F3F4F6" 
         Foreground="Gray"/>

                                </StackPanel>

                                <!-- First Name -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="First Name" 
                                               FontSize="14" 
                                               FontWeight="Medium" 
                                               Foreground="{StaticResource Gray800}" 
                                               Margin="0,0,0,8"/>
                                    <TextBox x:Name="EditFirstNameTextBox" 
                                             Style="{StaticResource FormTextBoxStyle}"
                                             Height="40"/>
                                </StackPanel>

                                <!-- Last Name -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Last Name" 
                                               FontSize="14" 
                                               FontWeight="Medium" 
                                               Foreground="{StaticResource Gray800}" 
                                               Margin="0,0,0,8"/>
                                    <TextBox x:Name="EditLastNameTextBox" 
                                             Style="{StaticResource FormTextBoxStyle}"
                                             Height="40"/>
                                </StackPanel>

                                <!-- Hire Date -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Hire Date" 
                                               FontSize="14" 
                                               FontWeight="Medium" 
                                               Foreground="{StaticResource Gray800}" 
                                               Margin="0,0,0,8"/>
                                    <DatePicker x:Name="EditHireDatePicker" 
                                                Height="40"
                                                Background="White"
                                                BorderBrush="{StaticResource Gray200}"
                                                BorderThickness="1"
                                                Padding="12,0"/>
                                </StackPanel>

                                <!-- Contact Info -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Contact Info" 
                                               FontSize="14" 
                                               FontWeight="Medium" 
                                               Foreground="{StaticResource Gray800}" 
                                               Margin="0,0,0,8"/>
                                    <TextBox x:Name="EditContactInfoTextBox" 
                                             Style="{StaticResource FormTextBoxStyle}"
                                             Height="40"/>
                                </StackPanel>

                                <!-- Salary Rate -->
                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Salary Rate" 
                                               FontSize="14" 
                                               FontWeight="Medium" 
                                               Foreground="{StaticResource Gray800}" 
                                               Margin="0,0,0,8"/>
                                    <TextBox x:Name="EditSalaryRateTextBox" 
                                             Style="{StaticResource FormTextBoxStyle}"
                                             Height="40"/>
                                </StackPanel>

                            </StackPanel>
                        </ScrollViewer>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="3" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,24,0,0">
                            <Button Content="Close"
                                    Background="Transparent"
                                    Foreground="{StaticResource Gray600}"
                                    BorderThickness="0"
                                    Padding="16,8"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Cursor="Hand"
                                    Click="CloseEditPopup_Click"
                                    Margin="0,0,12,0"/>
                            <Button Content="Save Changes"
                                    Background="{StaticResource PrimaryBlue}"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="20,8"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Cursor="Hand"
                                    Click="SaveAgent_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                    </Grid>

                </Border>
            </Grid>

        </Grid>
    </Border>
</Page> 