<Page x:Class="Real_Estate_Agencies.AgentsPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:conv="clr-namespace:Real_Estate_Agencies.Converter" Title="AgentsPage" Background="#F8FAFC">
    <Page.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Search + Add -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                
                <!-- Search -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="{StaticResource Gray200}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Icon -->
                        <TextBlock Grid.Column="0" Text="🔍" FontSize="14" Margin="12,0,8,0" VerticalAlignment="Center" Foreground="{StaticResource Gray400}"/>

                        <!-- Search TextBox -->
                        <TextBox Grid.Column="1" x:Name="SearchTextBox" Background="Transparent" BorderThickness="0" FontSize="14" Padding="0,12" VerticalAlignment="Center" Foreground="{StaticResource Gray800}"
                 TextChanged="SearchTextBox_TextChanged"
                 GotFocus="SearchTextBox_GotFocus"
                 LostFocus="SearchTextBox_LostFocus"/>

                        <!-- Placeholder -->
                        <TextBlock Grid.Column="1" x:Name="PlaceholderText" Text="Search agents..." Foreground="{StaticResource Gray400}" IsHitTestVisible="False" VerticalAlignment="Center" Margin="0,12"/>
                    </Grid>
                </Border>

                <!-- Add Agent -->
                <Button Grid.Column="1" Content="+ Add Agent" Style="{StaticResource AddButtonStyle}" Click="AddAgent_Click" Margin="16,0,0,0"/>
            </Grid>
            <!-- Table -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Header -->
                <Border Background="{StaticResource Gray50}" CornerRadius="8,8,0,0" BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0" Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <!-- Agent -->
                            <ColumnDefinition Width="*"/>
                            <!-- First Name -->
                            <ColumnDefinition Width="*"/>
                            <!-- Last Name -->
                            <ColumnDefinition Width="120"/>
                            <!-- Hire Date -->
                            <ColumnDefinition Width="*"/>
                            <!-- Contact Info -->
                            <ColumnDefinition Width="100"/>
                            <!-- Action -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Agent" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="First Name" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Last Name" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="Hire Date" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="Contact Info" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="Action" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Agent List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Border CornerRadius="0,0,8,8" BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1">
                        <ItemsControl ItemsSource="{Binding Agents}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Make the whole row clickable -->
                                    <Button Background="Transparent" BorderThickness="0"
                            CommandParameter="{Binding}"
                            Click="ViewAgentDetails_Click"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            Cursor="Hand">
                                        <Border Background="White" BorderBrush="{StaticResource Gray100}" BorderThickness="0,0,0,1">
                                            <Grid VerticalAlignment="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <!-- Agent -->
                                                    <ColumnDefinition Width="*"/>
                                                    <!-- First Name -->
                                                    <ColumnDefinition Width="*"/>
                                                    <!-- Last Name -->
                                                    <ColumnDefinition Width="120"/>
                                                    <!-- Hire Date -->
                                                    <ColumnDefinition Width="*"/>
                                                    <!-- Contact Info -->
                                                    <ColumnDefinition Width="100"/>
                                                    <!-- Action -->
                                                </Grid.ColumnDefinitions>

                                                <!-- Agent Image -->
                                                <Border Grid.Column="0" Width="50" Height="50" BorderBrush="Gray" BorderThickness="1"
                                        CornerRadius="25" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4">
                                                    <Image Source="{Binding ProfileBitmap}" Stretch="UniformToFill" Width="50" Height="50">
                                                        <Image.Clip>
                                                            <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
                                                        </Image.Clip>
                                                    </Image>
                                                </Border>

                                                <!-- Agent Info -->
                                                <TextBlock Grid.Column="1" Text="{Binding FirstName}" Style="{StaticResource CellTextStyle}" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="{Binding LastName}" Style="{StaticResource CellTextStyle}" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="3" Text="{Binding HireDate}" Style="{StaticResource CellTextStyle}" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="4" Text="{Binding ContactInfo}" Style="{StaticResource CellTextStyle}" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                                <!-- Actions -->
                                                <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Button Style="{StaticResource CircularIconButtonStyle}" ToolTip="Edit" Margin="2,0"
                                            Click="EditAgent_Click" CommandParameter="{Binding}">
                                                        <TextBlock Text="✏️" FontSize="12"/>
                                                    </Button>
                                                    <Button Style="{StaticResource CircularIconButtonStyle}" ToolTip="Delete" Margin="2,0"
                                            Click="DeleteAgent_Click" CommandParameter="{Binding}">
                                                        <TextBlock Text="🗑️" FontSize="12"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </ScrollViewer>

            </Grid>
            <!-- Pagination -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Showing 1–5 of agents" VerticalAlignment="Center" Foreground="{StaticResource Gray600}" FontSize="12"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="1" Background="{StaticResource PrimaryBlue}" Foreground="White" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                </StackPanel>
            </Grid>
            
            
            <!-- Edit Agent Overlay -->
            <Grid x:Name="EditAgentOverlay"
      Grid.RowSpan="3"
      Background="#80000000"
      Visibility="Collapsed"
      VerticalAlignment="Stretch"
      HorizontalAlignment="Stretch"
      Panel.ZIndex="99">

                <Grid.Resources>
                    <!-- Fade + Zoom Animation -->
                    <Storyboard x:Key="ShowEditOverlayStoryboard">
                        <DoubleAnimation Storyboard.TargetName="EditAgentPanel"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.25"/>
                        <DoubleAnimation Storyboard.TargetName="EditAgentPanel"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="0.9" To="1"
                             Duration="0:0:0.25">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetName="EditAgentPanel"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="0.9" To="1"
                             Duration="0:0:0.25">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>

                    <Storyboard x:Key="HideEditOverlayStoryboard">
                        <DoubleAnimation Storyboard.TargetName="EditAgentPanel"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0"
                             Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="EditAgentPanel"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="1" To="0.9"
                             Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="EditAgentPanel"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="1" To="0.9"
                             Duration="0:0:0.2"/>
                    </Storyboard>
                </Grid.Resources>

                <Border x:Name="EditAgentPanel"
            Background="White"
            CornerRadius="16"
            Padding="30"
            Width="480"
            MaxHeight="700"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="20"
            Opacity="0"
            RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                    </Border.RenderTransform>

                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="16" ShadowDepth="4" Direction="270"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Close Button -->
                 

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Margin="0,10,0,20">
                            <TextBlock Text="Edit Agent" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="Update agent details" FontSize="13" Foreground="#6C7A89" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Form Content -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">
                                <TextBox x:Name="TxtAgentId" Visibility="Collapsed"/>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="First Name" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtFirstName" Height="40" Padding="10"
                                 BorderBrush="#E1E8ED" BorderThickness="1"
                                 Background="White" Foreground="#2C3E50"
                                 VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Last Name" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtLastName" Height="40" Padding="10"
                                 BorderBrush="#E1E8ED" BorderThickness="1"
                                 Background="White" Foreground="#2C3E50"
                                 VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Hire Date" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <DatePicker x:Name="DpHireDate" Height="40" Padding="10"
                                    BorderBrush="#E1E8ED" BorderThickness="1"
                                    Background="White" Foreground="#2C3E50"
                                    VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Contact Info" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtContact" Height="40" Padding="10"
                                 BorderBrush="#E1E8ED" BorderThickness="1"
                                 Background="White" Foreground="#2C3E50"
                                 VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Footer Buttons -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal"
            HorizontalAlignment="Right" Margin="0,20,0,0">
                            <!-- Close Button -->
                            <Button Content="Close"
            Width="90" Height="40"
            Background="White"
            BorderBrush="#D0D5DD"
            BorderThickness="1"
            Foreground="#344054"
            Cursor="Hand"
            Margin="0,0,12,0"
            Click="CloseEditAgentOverlay_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border CornerRadius="8"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="10,0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F2F4F7"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Save Agent Button -->
                            <Button Content="Save Agent"
            Width="150" Height="40"
            Background="#4F46E5"
            BorderThickness="0"
            Foreground="White"
            FontWeight="Bold"
            Cursor="Hand"
            Click="SaveAgent_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border CornerRadius="8"
                                    Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#6366F1"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#4338CA"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>


            <!-- Agent Details Overlay with Glass Background -->
            <Grid x:Name="AgentDetailsOverlay"
      Grid.RowSpan="3"
      Background="#80000000"
      Visibility="Collapsed"
      VerticalAlignment="Stretch"
      HorizontalAlignment="Stretch"
      Panel.ZIndex="98">

                <Grid.Resources>
                    <!-- Fade + Slide Animations -->
                    <Storyboard x:Key="ShowOverlayStoryboard">
                        <DoubleAnimation Storyboard.TargetName="AgentDetailsPanel"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.25"/>
                        <DoubleAnimation Storyboard.TargetName="AgentDetailsPanel"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="40" To="0" Duration="0:0:0.25"/>
                    </Storyboard>

                    <Storyboard x:Key="HideOverlayStoryboard">
                        <DoubleAnimation Storyboard.TargetName="AgentDetailsPanel"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="AgentDetailsPanel"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0" To="40" Duration="0:0:0.2"/>
                    </Storyboard>
                </Grid.Resources>

                <Border x:Name="AgentDetailsPanel"
            Background="#F9FAFBCC"
            CornerRadius="20"
            Width="720"
            MaxHeight="520"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="20"
            Opacity="0"
            RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TranslateTransform Y="40"/>
                    </Border.RenderTransform>

                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.25" BlurRadius="30" ShadowDepth="4"/>
                    </Border.Effect>

                    <!-- Main Split Layout -->
                    <Grid Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <!-- Left: Profile -->
                            <ColumnDefinition Width="1"/>
                            <!-- Divider -->
                            <ColumnDefinition Width="*"/>
                            <!-- Right: Details -->
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel -->
                        <Border Grid.Column="0"
                    Background="#EEF2FF"
                    CornerRadius="20,0,0,20"
                    Padding="24">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                                <!-- Profile Image -->
                                <Border Width="120" Height="120" CornerRadius="60" Padding="4" Margin="0,0,0,16">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#3B82F6" Offset="0"/>
                                            <GradientStop Color="#9333EA" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border CornerRadius="55" Background="White" Padding="2">
                                        <Image x:Name="DetailsProfileImage"
                                   Stretch="UniformToFill"
                                   Width="110" Height="110"
                                   ClipToBounds="True">
                                            <Image.Clip>
                                                <EllipseGeometry Center="55,55" RadiusX="55" RadiusY="55"/>
                                            </Image.Clip>
                                        </Image>
                                    </Border>
                                </Border>

                                <!-- Agent Name -->
                                <TextBlock x:Name="DetailsFullName"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,4,0,2"/>
                                <TextBlock x:Name="DetailsContact"
                               FontSize="13"
                               Foreground="#6B7280"
                               TextAlignment="Center"
                               Margin="0,0,0,18"/>

                                <Rectangle Fill="#CBD5E1" Height="1" Width="160" Margin="0,4,0,20"/>
                                

                                <!-- Hire Date -->
                                <!-- Agent ID -->
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,6" HorizontalAlignment="Left">
                                    <TextBlock Text="🆔" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="Agent ID:" FontWeight="SemiBold" Foreground="#374151" Width="80"/>
                                    <TextBlock x:Name="DetailsAgentId" Foreground="#111827"/>
                                </StackPanel>

                                <!-- Hire Date -->
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,6" HorizontalAlignment="Center">
                                    <TextBlock Text="📅" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="Hire Date:" FontWeight="SemiBold" Foreground="#374151" Width="80"/>
                                    <TextBlock x:Name="DetailsHireDate" Foreground="#111827"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Divider -->
                        <Rectangle Grid.Column="1" Width="1" Fill="#E5E7EB"/>

                        <!-- Right Panel -->
                        <Grid Grid.Column="2" Margin="30,20,30,30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Close Button -->
                            <Button Content="✕"
                        Width="34" Height="34"
                        FontSize="16" FontWeight="Bold"
                        Background="#F3F4F6"
                        Foreground="#374151"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Cursor="Hand"
                        Click="CloseAgentDetailsOverlay_Click">
                                <Button.Effect>
                                    <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="6" ShadowDepth="2"/>
                                </Button.Effect>
                            </Button>

                            <!-- Main Details Section -->
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,20,0,20">
                                <!-- Commission Balance -->
                                <Border Background="White" CornerRadius="10" Padding="14" Margin="0,0,0,12">
                                    <StackPanel>
                                        <TextBlock Text="Commission Balance"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#374151"/>
                                        <TextBlock x:Name="DetailsCommissionBalance"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#1E3A8A"
                                       Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Unit Sales -->
                                <Border Background="White" CornerRadius="10" Padding="14">
                                    <StackPanel>
                                        <TextBlock Text="Unit Sales"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#374151"/>
                                        <TextBlock x:Name="DetailsUnitSales"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#065F46"
                                       Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Bottom Buttons -->
                            <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                                <Border CornerRadius="10"
                            Background="#3B82F6"
                            Height="42"
                            Width="170">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="8" ShadowDepth="3"/>
                                    </Border.Effect>
                                    <Button Content="Release Commission"
                                Background="Transparent"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="14"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ReleaseCommission_Click"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>



        </Grid>
    </Border>
</Page>