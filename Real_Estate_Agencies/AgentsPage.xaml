<Page x:Class="Real_Estate_Agencies.AgentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AgentsPage">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Add Button -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="Add Agent" Width="120" Height="30"
                    Background="#FFE08F" FontWeight="Bold"
                    Click="AddAgent_Click"/>
        </StackPanel>

        <!-- Agents DataGrid -->
        <DataGrid x:Name="AgentsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  BorderBrush="#E0E0E0"
                  BorderThickness="1"
                  AlternatingRowBackground="#FFF9E5">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="*"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Hire Date" Binding="{Binding HireDate}" Width="*"/>
                <DataGridTextColumn Header="Contact Info" Binding="{Binding ContactInfo}" Width="*"/>
                <DataGridTextColumn Header="Salary Rate" Binding="{Binding SalaryRate}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
