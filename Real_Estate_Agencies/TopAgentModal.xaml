<UserControl x:Class="Real_Estate_Agencies.TopAgentModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             Width="500" Height="600"
             Background="Transparent">

    <Border Background="White" CornerRadius="15" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Header -->
                <Grid>
                    <TextBlock x:Name="AgentNameText" Text="Agent Name" FontSize="20" FontWeight="Bold"/>
                    <Button Content="✕" Width="30" Height="30" HorizontalAlignment="Right" Click="Close_Click" Background="Transparent" BorderThickness="0"/>
                </Grid>

                <!-- Agent Info -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Ellipse Width="60" Height="60" Fill="#3B82F6"/>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock x:Name="AgentSalesText" Text="Sales: 0" FontSize="14" Foreground="#777"/>
                        <TextBlock x:Name="AgentRevenueText" Text="Revenue: $0" FontSize="14" Foreground="#777"/>
                        <TextBlock x:Name="AgentCommissionText" Text="Commission: $0" FontSize="14" Foreground="#777"/>
                        <TextBlock x:Name="AgentDealsText" Text="Deals this month: 0" FontSize="14" Foreground="#777"/>
                    </StackPanel>
                </StackPanel>

                <!-- Charts -->
                <TextBlock Text="Monthly Sales" FontWeight="Bold" Margin="0,10,0,5"/>
                <lvc:CartesianChart x:Name="BarChart" Height="150"/>

                <TextBlock Text="Sales Trend" FontWeight="Bold" Margin="0,10,0,5"/>
                <lvc:CartesianChart x:Name="LineChart" Height="150"/>

                <!-- Recent Deals Table -->
                <TextBlock Text="Recent Deals" FontWeight="Bold" Margin="0,10,0,5"/>
                <DataGrid x:Name="RecentDealsGrid" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" IsReadOnly="True" Height="150">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Property" Binding="{Binding Property}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
