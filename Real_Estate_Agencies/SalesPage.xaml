<Page x:Class="Real_Estate_Agencies.SalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SalesPage"
      Background="#F8FAFC">

    <!-- Resources and Styles -->
    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <!-- Main Layout -->
    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Filters -->
            <Border Grid.Row="0" Background="White" CornerRadius="12"
                    Padding="20" Margin="0,0,0,16"
                    BorderBrush="{StaticResource Gray200}" BorderThickness="1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- From Date -->
                    <StackPanel Margin="0,0,32,0">
                        <TextBlock Text="From" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource Gray600}" Margin="0,0,0,6"
                                   HorizontalAlignment="Center"/>
                        <Border CornerRadius="6" BorderBrush="{StaticResource Gray200}" BorderThickness="1" Background="{StaticResource Gray50}">
                            <DatePicker x:Name="FromDatePicker" Width="160" Height="32" Background="Transparent"
                                        SelectedDateChanged="FromDatePicker_SelectedDateChanged"/>
                        </Border>
                    </StackPanel>

                    <!-- To Date -->
                    <StackPanel Margin="0,0,32,0">
                        <TextBlock Text="To" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource Gray600}" Margin="0,0,0,6"
                                   HorizontalAlignment="Center"/>
                        <Border CornerRadius="6" BorderBrush="{StaticResource Gray200}" BorderThickness="1" Background="{StaticResource Gray50}">
                            <DatePicker x:Name="ToDatePicker" Width="160" Height="32" Background="Transparent"
                                        SelectedDateChanged="ToDatePicker_SelectedDateChanged"/>
                        </Border>
                    </StackPanel>

                    <!-- Sort -->
                    <StackPanel>
                        <TextBlock Text="Sort By" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource Gray600}" Margin="0,0,0,6"
                                   HorizontalAlignment="Center"/>
                        <Border CornerRadius="6" BorderBrush="{StaticResource Gray200}" BorderThickness="1" Background="{StaticResource Gray50}">
                            <ComboBox x:Name="SortComboBox" Width="160" Height="32" Background="Transparent"
                                      SelectionChanged="SortComboBox_SelectionChanged">
                                <ComboBoxItem Content="Date" IsSelected="True"/>
                                <ComboBoxItem Content="Client"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Add Sale Button -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,8">
                <Button Content="Add Sale" Style="{StaticResource AddButtonStyle}" Width="120" Height="36"
                        Click="AddSale_Click"/>
            </StackPanel>

            <!-- Sales Table -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="{StaticResource Gray50}" 
                        CornerRadius="8,8,0,0" 
                        BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0"
                        Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <!-- Action Column -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Sale ID" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="Client ID" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="2" Text="Property ID" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="3" Text="Agent ID" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="4" Text="Sale Date" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="5" Text="Payment Mode" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="6" Text="Action" Style="{StaticResource HeaderTextStyle}"/>
                    </Grid>
                </Border>

                <!-- Sales List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Border CornerRadius="0,0,8,8" BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1">
                        <ItemsControl x:Name="SalesDataGrid" ItemsSource="{Binding}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="{StaticResource Gray100}" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding SaleId}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding ClientId}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding PropertyId}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="3" Text="{Binding AgentId}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="4" Text="{Binding SaleDate}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="5" Text="{Binding PaymentMode}" Style="{StaticResource CellTextStyle}"/>

                                            <!-- View Button -->
                                            <Button Grid.Column="6" Content="👁"
                                                    Style="{StaticResource CircularIconButtonStyle}"
                                                    ToolTip="View Sale"
                                                    Click="ViewSale_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </ScrollViewer>
            </Grid>

            <!-- Pagination -->
            <Grid Grid.Row="3" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Page 1 of 1" VerticalAlignment="Center" 
                           Foreground="{StaticResource Gray600}" FontSize="12" HorizontalAlignment="Left"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="1" Background="{StaticResource PrimaryBlue}" 
                            Foreground="White" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Page>
