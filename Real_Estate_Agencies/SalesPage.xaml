<Page x:Class="Real_Estate_Agencies.SalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SalesPage"
      Background="#F8FAFC">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>

        <!-- Text styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Hoverable row style -->
        <Style x:Key="HoverableRowStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Add Sale button style -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DarkBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Circular button for pagination -->
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Gray50}"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Page Title -->
                <RowDefinition Height="Auto"/>
                <!-- Filters -->
                <RowDefinition Height="Auto"/>
                <!-- Add Sale Button -->
                <RowDefinition Height="*"/>
                <!-- Sales Table -->
                <RowDefinition Height="Auto"/>
                <!-- Pagination -->
            </Grid.RowDefinitions>


            <!-- Page Title -->
            <TextBlock Grid.Row="0" Text="Sales Page"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,16"/>

            <!-- Filters -->
            <Border Grid.Row="1" Background="White" CornerRadius="12"
                    Padding="20" Margin="0,0,0,16"
                    BorderBrush="{StaticResource Gray200}" BorderThickness="1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                    <!-- From Date -->
                    <StackPanel Margin="0,0,32,0">
                        <TextBlock Text="From" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource Gray600}" Margin="0,0,0,6"
                                   HorizontalAlignment="Center"/>
                        <Border CornerRadius="6" BorderBrush="{StaticResource Gray200}" BorderThickness="1" Background="{StaticResource Gray50}">
                            <DatePicker x:Name="FromDatePicker" Width="160" Height="32" Background="Transparent"
                                        SelectedDateChanged="FromDatePicker_SelectedDateChanged"/>
                        </Border>
                    </StackPanel>

                    <!-- To Date -->
                    <StackPanel Margin="0,0,32,0">
                        <TextBlock Text="To" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource Gray600}" Margin="0,0,0,6"
                                   HorizontalAlignment="Center"/>
                        <Border CornerRadius="6" BorderBrush="{StaticResource Gray200}" BorderThickness="1" Background="{StaticResource Gray50}">
                            <DatePicker x:Name="ToDatePicker" Width="160" Height="32" Background="Transparent"
                                        SelectedDateChanged="ToDatePicker_SelectedDateChanged"/>
                        </Border>
                    </StackPanel>

                    <!-- Sort -->
                    <StackPanel>
                        <TextBlock Text="Sort By" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource Gray600}" Margin="0,0,0,6"
                                   HorizontalAlignment="Center"/>
                        <Border CornerRadius="6" BorderBrush="{StaticResource Gray200}" BorderThickness="1" Background="{StaticResource Gray50}">
                            <ComboBox x:Name="SortComboBox" Width="160" Height="32" Background="Transparent"
                                      SelectionChanged="SortComboBox_SelectionChanged">
                                <ComboBoxItem Content="Date" IsSelected="True"/>

                                <ComboBoxItem Content="Client"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Add Sale Button -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,8">
                <Button Content="Add Sale" Style="{StaticResource AddButtonStyle}" Width="120" Height="36"
                        Click="AddSale_Click"/>
            </StackPanel>

            <!-- Sales Table -->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="{StaticResource Gray50}" 
            CornerRadius="8,8,0,0" 
            BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0"
            Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <!-- Client -->
                            <ColumnDefinition Width="2*"/>
                            <!-- Property -->
                            <ColumnDefinition Width="2*"/>
                            <!-- Agent -->
                            <ColumnDefinition Width="*"/>
                            <!-- Date -->
                            <ColumnDefinition Width="*"/>
                            <!-- Payment -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Client Name" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="Property Type" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="2" Text="Agent Name" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="3" Text="Sale Date" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="4" Text="Payment Mode" Style="{StaticResource HeaderTextStyle}"/>
                    </Grid>
                </Border>

                <!-- Sales List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Border CornerRadius="0,0,8,8" BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1">
                        <ItemsControl x:Name="SalesDataGrid">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource HoverableRowStyle}" MouseDown="SaleRow_MouseDown">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding ClientName}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding PropertyType}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding AgentName}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="3" Text="{Binding SaleDate, StringFormat={}{0:yyyy-MM-dd}}" Style="{StaticResource CellTextStyle}"/>

                                            <TextBlock Grid.Column="4" Text="{Binding PaymentMode}" Style="{StaticResource CellTextStyle}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </ScrollViewer>
            </Grid>

            <!-- Pagination -->
            <!-- Pagination -->
            <Grid Grid.Row="4" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Showing info -->
                <TextBlock Grid.Column="0" x:Name="PageInfoTextBlock"
               Text="Showing 1-3 of 3 sales"
               VerticalAlignment="Center"
               Foreground="{StaticResource Gray600}" 
               FontSize="12"
               Margin="0,0,16,0"
               HorizontalAlignment="Left"/>

                <!-- Pagination buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0" Click="PrevPageBtn_Click"/>
                    <Button Content="1" Width="32" Height="32" Background="{StaticResource PrimaryBlue}" Foreground="White" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0" Click="NextPageBtn_Click"/>
                </StackPanel>
            </Grid>

        </Grid>
    </Border>
</Page>
