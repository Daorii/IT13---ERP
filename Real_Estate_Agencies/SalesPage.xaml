<Page x:Class="Real_Estate_Agencies.SalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SalesPage"
      Background="#F8FAFC">

    <Page.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>

        <!-- Header text -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <!-- fills the grid cell -->
            <Setter Property="TextAlignment" Value="Center"/>
            <!-- centers the text -->
        </Style>

        <!-- Cell text -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Circular button -->
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Filters -->
            <Border Grid.Row="0" Background="White" CornerRadius="12"
        Padding="20" Margin="0,0,0,24"
        BorderBrush="{StaticResource Gray200}" BorderThickness="1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

                    <!-- From Date -->
                    <StackPanel Margin="0,0,32,0">
                        <TextBlock Text="From" FontSize="11" FontWeight="SemiBold"
                       Foreground="{StaticResource Gray600}" Margin="0,0,0,6"
                       HorizontalAlignment="Center"/>
                        <Border CornerRadius="6" BorderBrush="{StaticResource Gray200}" BorderThickness="1" Background="{StaticResource Gray50}">
                            <DatePicker x:Name="FromDatePicker" Width="160" Height="32" Background="Transparent"/>
                        </Border>
                    </StackPanel>

                    <!-- To Date -->
                    <StackPanel Margin="0,0,32,0">
                        <TextBlock Text="To" FontSize="11" FontWeight="SemiBold"
                       Foreground="{StaticResource Gray600}" Margin="0,0,0,6"
                       HorizontalAlignment="Center"/>
                        <Border CornerRadius="6" BorderBrush="{StaticResource Gray200}" BorderThickness="1" Background="{StaticResource Gray50}">
                            <DatePicker x:Name="ToDatePicker" Width="160" Height="32" Background="Transparent"/>
                        </Border>
                    </StackPanel>

                    <!-- Sort -->
                    <StackPanel>
                        <TextBlock Text="Sort By" FontSize="11" FontWeight="SemiBold"
                       Foreground="{StaticResource Gray600}" Margin="0,0,0,6"
                       HorizontalAlignment="Center"/>
                        <Border CornerRadius="6" BorderBrush="{StaticResource Gray200}" BorderThickness="1" Background="{StaticResource Gray50}">
                            <ComboBox x:Name="SortComboBox" Width="160" Height="32" Background="Transparent">
                                <ComboBoxItem Content="Date" IsSelected="True"/>
                                <ComboBoxItem Content="Amount"/>
                                <ComboBoxItem Content="Customer"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Table -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="{StaticResource Gray50}" 
        CornerRadius="8,8,0,0" 
        BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0"
        Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="No" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="Sales ID" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="2" Text="Student ID" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="3" Text="Sales Date" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="4" Text="Total Amount" Style="{StaticResource HeaderTextStyle}"/>
                    </Grid>
                </Border>

                <!-- Sales List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Border CornerRadius="0,0,8,8" BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1">
                        <ItemsControl x:Name="SalesDataGrid" ItemsSource="{Binding}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="{StaticResource Gray100}" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="1" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding SalesId}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding StudentId}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="3" Text="{Binding SalesDate}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="4" Text="{Binding TotalAmount}" Style="{StaticResource CellTextStyle}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>


                    </Border>
                </ScrollViewer>
            </Grid>

            <!-- Pagination -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Page 1 of 1" VerticalAlignment="Center" 
                           Foreground="{StaticResource Gray600}" FontSize="12" HorizontalAlignment="Left"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="1" Background="{StaticResource PrimaryBlue}" 
                            Foreground="White" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Page>
