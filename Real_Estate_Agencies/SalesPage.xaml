<Page x:Class="Real_Estate_Agencies.SalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SalesPage">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Sales Management"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333"
                       DockPanel.Dock="Left"/>
            <Button x:Name="AddSaleButton"
                    Content="Add Sale"
                    Width="120"
                    Height="35"
                    Background="#1976D2"
                    Foreground="White"
                    FontWeight="SemiBold"
                    DockPanel.Dock="Right"
                    Click="AddSaleButton_Click"/>
        </DockPanel>

        <!-- Sales Table -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8">
            <DataGrid x:Name="SalesGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeight="35"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None"
                      Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Sale ID" Binding="{Binding SaleId}" Width="*"/>
                    <DataGridTextColumn Header="Client ID" Binding="{Binding ClientId}" Width="*"/>
                    <DataGridTextColumn Header="Property ID" Binding="{Binding PropertyId}" Width="*"/>
                    <DataGridTextColumn Header="Sale Date" Binding="{Binding SaleDate}" Width="*"/>
                    <DataGridTextColumn Header="Payment Option" Binding="{Binding PaymentOption}" Width="*"/>
                    <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
