<Window x:Class="Real_Estate_Agencies.AddAgentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Agent"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Employee ID"/>
            <TextBox x:Name="TxtEmployeeId" Margin="0,5,0,10"/>

            <TextBlock Text="First Name"/>
            <TextBox x:Name="TxtFirstName" Margin="0,5,0,10"/>

            <TextBlock Text="Last Name"/>
            <TextBox x:Name="TxtLastName" Margin="0,5,0,10"/>

            <TextBlock Text="Hire Date"/>
            <DatePicker x:Name="DpHireDate" Margin="0,5,0,10"/>

            <TextBlock Text="Contact Info"/>
            <TextBox x:Name="TxtContactInfo" Margin="0,5,0,10"/>

            <TextBlock Text="Salary Rate"/>
            <TextBox x:Name="TxtSalaryRate" Margin="0,5,0,10"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Add" Width="80" Background="#FFE08F" FontWeight="Bold" Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Window>
