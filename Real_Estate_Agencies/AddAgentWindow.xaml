<Window x:Class="Real_Estate_Agencies.AddAgentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Agent"
        Width="1000" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Grid Background="Transparent">
        <!-- 🩵 Main Card -->
        <Border x:Name="MainCard"
        Background="#FFE9F7FF"
        CornerRadius="20"
        Padding="30"
        BorderBrush="#C7D2FE"
        BorderThickness="1"
        Width="950"
        Height="620"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        SnapsToDevicePixels="True"
        RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
            </Border.RenderTransform>

            <Border.Effect>
                <DropShadowEffect Color="#4F46E5"
                          BlurRadius="25"
                          ShadowDepth="2"
                          Opacity="0.25"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 🧩 Header -->
                <StackPanel Grid.ColumnSpan="2" Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="👤 Add New Agent"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#1E293B"/>
                    <TextBlock Text="               Fill in the agent's details below"
                               FontSize="13"
                               Foreground="#64748B"/>
                    <Border Height="1" Background="#E2E8F0" Margin="0,14,0,0"/>
                </StackPanel>

                <!-- ✏️ Left Side: Form -->
                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,30,0">

                    <!-- Agent ID -->
                    <TextBlock Text="Agent ID" FontWeight="SemiBold" Foreground="#4A5568"/>
                    <Border CornerRadius="10" Background="#F9FAFB" BorderBrush="#CBD5E0" BorderThickness="1" Margin="0,6,0,20">
                        <TextBox x:Name="TxtEmployeeId"
                                 Padding="10"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"
                                 IsReadOnly="True"
                                 Text="(Auto-generated)"
                                 Foreground="#6B7280"/>
                    </Border>

                    <!-- First Name -->
                    <TextBlock Text="First Name" FontWeight="SemiBold" Foreground="#4A5568"/>
                    <Border CornerRadius="10" Background="White" BorderBrush="#CBD5E0" BorderThickness="1" Margin="0,6,0,20">
                        <TextBox x:Name="TxtFirstName"
                                 Padding="10"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"/>
                    </Border>

                    <!-- Last Name -->
                    <TextBlock Text="Last Name" FontWeight="SemiBold" Foreground="#4A5568"/>
                    <Border CornerRadius="10" Background="White" BorderBrush="#CBD5E0" BorderThickness="1" Margin="0,6,0,20">
                        <TextBox x:Name="TxtLastName"
                                 Padding="10"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"/>
                    </Border>

                    <!-- Hire Date -->
                    <TextBlock Text="Hire Date" FontWeight="SemiBold" Foreground="#4A5568"/>
                    <Border CornerRadius="10" Background="White" BorderBrush="#CBD5E0" BorderThickness="1" Margin="0,6,0,20">
                        <DatePicker x:Name="DpHireDate"
                                    Padding="8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="14"/>
                    </Border>

                    <!-- Contact Info -->
                    <TextBlock Text="Contact Info" FontWeight="SemiBold" Foreground="#4A5568"/>
                    <Border CornerRadius="10" Background="White" BorderBrush="#CBD5E0" BorderThickness="1" Margin="0,6,0,0">
                        <TextBox x:Name="TxtContactInfo"
                                 Padding="10"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"/>
                    </Border>
                </StackPanel>

                <!-- 🖼️ Right Side: Image Upload -->
                <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
                    <TextBlock Text="Profile Image"
                               FontWeight="SemiBold"
                               Foreground="#4A5568"
                               Margin="0,0,0,8"/>

                    <!-- Circular Preview -->
                    <Border Width="200" Height="200" CornerRadius="100"
                            Background="#F9FAFB"
                            BorderBrush="#CBD5E0"
                            BorderThickness="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,0,0,16">
                        <Image x:Name="PreviewImage"
                               Stretch="UniformToFill"
                               Visibility="Collapsed"
                               ClipToBounds="True"
                               SnapsToDevicePixels="True">
                            <Image.Clip>
                                <EllipseGeometry Center="100,100" RadiusX="100" RadiusY="100"/>
                            </Image.Clip>
                        </Image>
                    </Border>

                    <!-- Upload Controls -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="📁 Upload"
                                Width="120" Height="36"
                                Background="#E0F2FE"
                                BorderBrush="#90CDF4"
                                BorderThickness="1"
                                Foreground="#1E3A8A"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="UploadImageButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <TextBlock x:Name="TxtImagePath"
                                   Text="No file selected"
                                   Margin="10,8,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="#4A5568"
                                   FontSize="13"/>
                    </StackPanel>
                </StackPanel>

                <!-- ⚙️ Footer Buttons -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,25,0,0">
                    <!-- Cancel -->
                    <Button Content="Cancel"
                            Width="100" Height="40"
                            Margin="0,0,10,0"
                            Background="White"
                            Foreground="#1E293B"
                            BorderBrush="#CBD5E0"
                            BorderThickness="1"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="Cancel_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Add -->
                    <Button Content="{Binding AddButtonText, RelativeSource={RelativeSource AncestorType=Window}}"
                            Width="140" Height="40"
                            Background="#4F46E5"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Add_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#6366F1"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#4338CA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
