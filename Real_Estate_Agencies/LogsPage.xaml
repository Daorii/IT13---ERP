<Page x:Class="Real_Estate_Agencies.LogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LogsPage"
      Background="#F8FAFC">

    <Page.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>

        <!-- Header text -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Cell text -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Circular buttons (pagination arrows & numbers) -->
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Page Header -->
            <TextBlock Grid.Row="0" Text="Logs" FontSize="26" FontWeight="Bold" Foreground="{StaticResource Gray800}" 
                   Margin="0,0,0,16"/>

            <!-- Top bar: Search + Back -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search box -->
                <Border Background="White" CornerRadius="8" BorderBrush="{StaticResource Gray200}" BorderThickness="1" Grid.Column="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="🔍" FontSize="14" Margin="12,0,8,0" VerticalAlignment="Center" Foreground="{StaticResource Gray400}"/>
                        <TextBox Grid.Column="1" x:Name="SearchTextBox" Background="Transparent" BorderThickness="0" FontSize="14" Padding="0,12" VerticalAlignment="Center" Foreground="{StaticResource Gray800}"/>
                        <TextBlock Grid.Column="1" Text="Search logs..." x:Name="PlaceholderText" Foreground="{StaticResource Gray400}" IsHitTestVisible="False" VerticalAlignment="Center" Margin="0,12"/>
                    </Grid>
                </Border>

                <!-- Back button -->
                <Button Content="Back" Width="90" Height="40" Background="{StaticResource PrimaryBlue}"
                        Foreground="White" BorderThickness="0" Cursor="Hand" Grid.Column="1" Margin="12,0,0,0"
                        Click="BackButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

            <!-- Logs table -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="White" CornerRadius="8,8,0,0" BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0" Grid.Row="0">
                    <Grid Background="{StaticResource Gray50}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="100"/>
                            <ColumnDefinition Width="*" MinWidth="150"/>
                            <ColumnDefinition Width="*" MinWidth="150"/>
                            <ColumnDefinition Width="*" MinWidth="150"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Release ID" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="Agent Name" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="2" Text="Release Date" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="3" Text="Released Amount" Style="{StaticResource HeaderTextStyle}"/>
                        <!-- ✅ Added -->
                    </Grid>
                </Border>

                <!-- List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White">
                    <Border CornerRadius="0,0,8,8" BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1">
                        <ItemsControl x:Name="LogsDataGrid" ItemsSource="{Binding Logs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="{StaticResource Gray100}" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" MinWidth="100"/>
                                                <ColumnDefinition Width="*" MinWidth="150"/>
                                                <ColumnDefinition Width="*" MinWidth="150"/>
                                                <ColumnDefinition Width="*" MinWidth="150"/>
                                                <!-- ✅ Added -->
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding ReleaseID}" Style="{StaticResource CellTextStyle}" TextAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding AgentName}" Style="{StaticResource CellTextStyle}" TextAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding ReleaseDate, StringFormat=d}" Style="{StaticResource CellTextStyle}" TextAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{Binding ReleasedAmount, StringFormat=C}" Style="{StaticResource CellTextStyle}" TextAlignment="Center"/>
                                            <!-- ✅ Added -->

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </ScrollViewer>
            </Grid>

            <!-- Pagination -->
            <Grid Grid.Row="3" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Info text -->
                <TextBlock Grid.Column="0" Text="Showing 1-4 of 4 logs" VerticalAlignment="Center" Foreground="{StaticResource Gray600}" FontSize="12" Margin="0,0,16,0" HorizontalAlignment="Left"/>

                <!-- Page buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <!-- Only single page -->
                    <Button Content="1" Width="32" Height="32" Background="{StaticResource PrimaryBlue}" Foreground="White" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                </StackPanel>
            </Grid>

        </Grid>
    </Border>
</Page>
