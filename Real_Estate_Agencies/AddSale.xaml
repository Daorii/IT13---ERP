<Window x:Class="Real_Estate_Agencies.AddSale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Sale" Height="420" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Sale ID"/>
            <TextBox x:Name="SaleIdInput" Margin="0,5,0,10"/>

            <TextBlock Text="Client ID"/>
            <TextBox x:Name="ClientIdInput" Margin="0,5,0,10"/>

            <TextBlock Text="Property ID"/>
            <TextBox x:Name="PropertyIdInput" Margin="0,5,0,10"/>

            <TextBlock Text="Sale Date"/>
            <DatePicker x:Name="SaleDateInput" Margin="0,5,0,10"/>

            <TextBlock Text="Payment Option"/>
            <ComboBox x:Name="PaymentOptionInput" Margin="0,5,0,10">
                <ComboBoxItem Content="Cash"/>
                <ComboBoxItem Content="Bank Transfer"/>
                <ComboBoxItem Content="Installment"/>
            </ComboBox>

            <TextBlock Text="Total Price"/>
            <TextBox x:Name="TotalPriceInput" Margin="0,5,0,10"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0"/>
            <Button Content="Save" Width="80" Background="#1976D2" Foreground="White"/>

        </StackPanel>
    </Grid>
</Window>

