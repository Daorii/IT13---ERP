<Window x:Class="Real_Estate_Agencies.SaleDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sale Details"
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC">

    <Border Padding="20" Background="White" CornerRadius="12"
            BorderBrush="#E5E7EB" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Sale Details" 
                       FontSize="18" FontWeight="Bold" 
                       Foreground="#1F2937"
                       Margin="0,0,0,12"/>

            <!-- Sale info -->
            <StackPanel Grid.Row="1" Margin="0,12,0,12">
                <TextBlock Text="{Binding SaleId, StringFormat=Sale ID: {0}}" FontSize="14" Margin="0,4"/>
                <TextBlock Text="{Binding ClientId, StringFormat=Client ID: {0}}" FontSize="14" Margin="0,4"/>
                <TextBlock Text="{Binding PropertyId, StringFormat=Property ID: {0}}" FontSize="14" Margin="0,4"/>
                <TextBlock Text="{Binding AgentId, StringFormat=Agent ID: {0}}" FontSize="14" Margin="0,4"/>
                <TextBlock Text="{Binding SaleDate, StringFormat=Sale Date: {0:MM/dd/yyyy}}" FontSize="14" Margin="0,4"/>
                <TextBlock Text="{Binding PaymentMode, StringFormat=Payment Mode: {0}}" FontSize="14" Margin="0,4"/>
            </StackPanel>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Add Payment" 
                        Width="120" Height="36"
                        Background="#3B82F6" Foreground="White"
                        FontWeight="SemiBold" Margin="0,0,8,0"
                        Click="AddPayment_Click"/>

                <Button Content="Close" 
                        Width="100" Height="36"
                        Background="#9CA3AF" Foreground="White"
                        FontWeight="SemiBold"
                        Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
