<Window x:Class="Real_Estate_Agencies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Real Estate Agency System"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarIconStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Width="{TemplateBinding Width}" 
                                Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FFE08F"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3C4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Rounded Sidebar -->
        <Border CornerRadius="20"
                Margin="10"
                Background="#F9E2AE"
                DockPanel.Dock="Left"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Left">
            <StackPanel x:Name="SidebarPanel"
                        Width="70"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Left">

                <!-- Profile Circle -->
                <Border Width="50" Height="50"
                        Margin="10 20 10 30"
                        CornerRadius="25"
                        Background="#D9D9D9"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        ClipToBounds="True">
                    <Grid>
                        <Ellipse Fill="#D9D9D9"/>
                        <Viewbox Stretch="Uniform">
                            <Image Source="C:\Users\maria\Downloads\realEstate (1).png"/>
                        </Viewbox>
                    </Grid>
                </Border>

                <!-- Navigation Buttons -->
                <ToggleButton x:Name="BtnDashboard" ToolTip="Dashboard"
                              Style="{StaticResource SidebarIconStyle}" Checked="Sidebar_Checked">
                    <TextBlock Text="&#xE80F;"/>
                </ToggleButton>

                <ToggleButton x:Name="BtnClients" ToolTip="Clients"
                              Style="{StaticResource SidebarIconStyle}" Checked="Sidebar_Checked">
                    <TextBlock Text="&#xE77B;"/>
                </ToggleButton>

                <ToggleButton x:Name="BtnProperties" ToolTip="Properties"
                              Style="{StaticResource SidebarIconStyle}" Checked="Sidebar_Checked">
                    <TextBlock Text="&#xE80C;"/>
                </ToggleButton>

                <ToggleButton x:Name="BtnAgents" ToolTip="Agents"
                              Style="{StaticResource SidebarIconStyle}" Checked="Sidebar_Checked">
                    <TextBlock Text="&#xE7EF;"/>
                </ToggleButton>

                <ToggleButton x:Name="BtnSales" ToolTip="Sales"
                              Style="{StaticResource SidebarIconStyle}" Checked="Sidebar_Checked">
                    <TextBlock Text="&#xE7BF;"/>
                </ToggleButton>

                <ToggleButton x:Name="BtnCommissions" ToolTip="Commissions"
                              Style="{StaticResource SidebarIconStyle}" Checked="Sidebar_Checked">
                    <TextBlock Text="&#xE9D2;"/>
                </ToggleButton>

                <ToggleButton x:Name="BtnPayroll" ToolTip="Payroll"
                              Style="{StaticResource SidebarIconStyle}" Checked="Sidebar_Checked">
                    <TextBlock Text="&#xE825;"/>
                </ToggleButton>

                <ToggleButton x:Name="BtnIncentives" ToolTip="Incentives"
                              Style="{StaticResource SidebarIconStyle}" Checked="Sidebar_Checked">
                    <TextBlock Text="&#xE9A1;"/>
                </ToggleButton>

            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
