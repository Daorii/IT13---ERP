<Window x:Class="Real_Estate_Agencies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Real Estate Agency System"
        Height="720" Width="1280"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Sidebar ToggleButton Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="10"
                                Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#FFE08F"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Background" Value="#FFF3C4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SidebarSectionStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="10,10,0,5"/>
            <Setter Property="Opacity" Value="0"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Sidebar -->
        <Border x:Name="Sidebar"
                CornerRadius="20"
                Margin="10"
                Background="#F9E2AE"
                DockPanel.Dock="Left"
                Width="74"
                MouseEnter="Sidebar_MouseEnter"
                MouseLeave="Sidebar_MouseLeave">

            <StackPanel x:Name="SidebarPanel" VerticalAlignment="Top" HorizontalAlignment="Left">

                <!-- Logo -->
                <Border Width="50" Height="50"
                        Margin="10,20,10,30"
                        CornerRadius="25"
                        Background="#D9D9D9"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        ClipToBounds="True">
                    <Image Source="Assets/logo.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <!-- Main Section -->
                <TextBlock Text="Main" Style="{StaticResource SidebarSectionStyle}" x:Name="LblMainSection"/>
                <ToggleButton x:Name="BtnDashboard" Style="{StaticResource SidebarButtonStyle}" Checked="Sidebar_Checked" ToolTip="Dashboard">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE80F;" FontFamily="Segoe Fluent Icons" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock x:Name="LblDashboard" Text="Dashboard" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Center" Margin="-40,0,0,0" Opacity="0"/>
                    </StackPanel>
                </ToggleButton>

                <!-- Management Section -->
                <TextBlock Text="Management" Style="{StaticResource SidebarSectionStyle}" x:Name="LblManagementSection"/>
                <ToggleButton x:Name="BtnClients" Style="{StaticResource SidebarButtonStyle}" Checked="Sidebar_Checked" ToolTip="Clients">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE77B;" FontFamily="Segoe Fluent Icons" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock x:Name="LblClients" Text="Clients" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Center" Margin="-40,0,0,0" Opacity="0"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton x:Name="BtnProperties" Style="{StaticResource SidebarButtonStyle}" Checked="Sidebar_Checked" ToolTip="Properties">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE80C;" FontFamily="Segoe Fluent Icons" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock x:Name="LblProperties" Text="Properties" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Center" Margin="-40,0,0,0" Opacity="0"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton x:Name="BtnAgents" Style="{StaticResource SidebarButtonStyle}" Checked="Sidebar_Checked" ToolTip="Agents">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE7EF;" FontFamily="Segoe Fluent Icons" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock x:Name="LblAgents" Text="Agents" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Center" Margin="-40,0,0,0" Opacity="0"/>
                    </StackPanel>
                </ToggleButton>

                <!-- Finance Section -->
                <TextBlock Text="Finance" Style="{StaticResource SidebarSectionStyle}" x:Name="LblFinanceSection"/>
                <ToggleButton x:Name="BtnSales" Style="{StaticResource SidebarButtonStyle}" Checked="Sidebar_Checked" ToolTip="Sales">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE7BF;" FontFamily="Segoe Fluent Icons" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock x:Name="LblSales" Text="Sales" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Center" Margin="-40,0,0,0" Opacity="0"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton x:Name="BtnCommissions" Style="{StaticResource SidebarButtonStyle}" Checked="Sidebar_Checked" ToolTip="Commissions">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE9D2;" FontFamily="Segoe Fluent Icons" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock x:Name="LblCommissions" Text="Commissions" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Center" Margin="-40,0,0,0" Opacity="0"/>
                    </StackPanel>
                </ToggleButton>
                <ToggleButton x:Name="BtnIncentives" Style="{StaticResource SidebarButtonStyle}" Checked="Sidebar_Checked" ToolTip="Incentives">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE9A1;" FontFamily="Segoe Fluent Icons" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock x:Name="LblIncentives" Text="Incentives" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Center" Margin="-40,0,0,0" Opacity="0"/>
                    </StackPanel>
                </ToggleButton>

                <!-- System Section -->
                <TextBlock Text="System" Style="{StaticResource SidebarSectionStyle}" x:Name="LblSystemSection"/>
         

                <!-- Spacer -->
                <StackPanel Height="50"/>

                <!-- Logout Button -->
                <ToggleButton x:Name="BtnLogout" Style="{StaticResource SidebarButtonStyle}" Checked="Sidebar_Checked" ToolTip="Logout">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8AC;" FontFamily="Segoe Fluent Icons" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock x:Name="LblLogout" Text="Logout" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Center" Margin="-40,0,0,0" Opacity="0"/>
                    </StackPanel>
                </ToggleButton>

            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </DockPanel>
</Window>