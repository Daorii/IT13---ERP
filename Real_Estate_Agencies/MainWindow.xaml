<Window x:Class="Real_Estate_Agencies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Real Estate Agency System"
        Height="720" Width="1280"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Modern Label Style -->
        <Style x:Key="SidebarLabelStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="Margin" Value="60,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="RenderTransformOrigin" Value="0,0.5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="-20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarIconStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="12"
                            Width="{TemplateBinding Width}" 
                            Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FFE08F"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3C4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <DockPanel LastChildFill="True">
        <!-- Sidebar -->
        <Border CornerRadius="20"
                Margin="10"
                Background="#F9E2AE"
                DockPanel.Dock="Left"
                VerticalAlignment="Stretch"
                Width="80">
            <!-- Fixed sidebar width -->

            <StackPanel x:Name="SidebarPanel"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Center">

                <!-- Profile Circle -->
                <Border Width="60" Height="60"
                        Margin="10 20 10 30"
                        CornerRadius="30"
                        Background="#D9D9D9"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        ClipToBounds="True">
                    <Image Source="Assets/logo.png"
                           Stretch="Uniform"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                </Border>
                
                
 <!-- Dashboard -->
    <ToggleButton x:Name="BtnDashboard" ToolTip="Dashboard"
                  Style="{StaticResource SidebarIconStyle}" Checked="Sidebar_Checked">
        <Grid>
            <TextBlock Text="&#xE80F;" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Border x:Name="LblDashboard" 
        Background="#F9E2AE"
        CornerRadius="12"
        Height="50"
        VerticalAlignment="Center" 
        HorizontalAlignment="Left"
        Margin="60,0,0,0" 
        Opacity="0" 
        RenderTransformOrigin="0,0.5">
                            <Border.RenderTransform>
                                <TranslateTransform X="-20"/>
                            </Border.RenderTransform>
                            <TextBlock Text="Dashboard" 
               FontSize="14" 
               Foreground="Black" 
               VerticalAlignment="Center" 
               Padding="10,0"/>
                        </Border>

                    </Grid>
        <ToggleButton.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="LblDashboard" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="LblDashboard" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="0" Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="LblDashboard" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="LblDashboard" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" To="-20" Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </ToggleButton.Triggers>
    </ToggleButton>

