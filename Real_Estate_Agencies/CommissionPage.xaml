<Page x:Class="Real_Estate_Agencies.CommissionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Commissions">

    <Grid Background="White" Margin="20">
        <StackPanel>
            <TextBlock Text="Commissions"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333"
                       Margin="0 0 0 10"/>

            <DataGrid AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Height="400"
                      RowBackground="White"
                      AlternatingRowBackground="#FFF8DC"
                      GridLinesVisibility="None"
                      BorderBrush="#E0E0E0"
                      BorderThickness="1"
                      FontSize="14"
                      Foreground="#333">

                <!-- Header Styling -->
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F9E2AE"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Commission ID" Width="*" Binding="{Binding CommissionID}"/>
                    <DataGridTextColumn Header="Sales ID" Width="*" Binding="{Binding SalesID}"/>
                    <DataGridTextColumn Header="Agent ID" Width="*" Binding="{Binding AgentID}"/>
                    <DataGridTextColumn Header="Payment ID" Width="*" Binding="{Binding PaymentID}"/>
                    <DataGridTextColumn Header="Commission Rate" Width="*" Binding="{Binding CommissionRate}"/>
                    <DataGridTextColumn Header="Commission Amount" Width="*" Binding="{Binding CommissionAmount}"/>
                    <DataGridTextColumn Header="Status" Width="*" Binding="{Binding Status}"/>
                    <DataGridTextColumn Header="Release Date" Width="*" Binding="{Binding ReleaseDate}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
