<Page x:Class="Real_Estate_Agencies.CommissionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Real_Estate_Agencies"
      Title="CommissionsPage"
      Background="#F8FAFC">
    <Page.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>

        <!-- Header text -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Cell text -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Circular buttons -->
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Search bar + Logs button -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Bar -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="{StaticResource Gray200}" BorderThickness="1" Margin="0,0,12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="🔍" FontSize="14" Margin="12,0,8,0" VerticalAlignment="Center" Foreground="{StaticResource Gray400}"/>
                        <TextBox Grid.Column="1" x:Name="SearchTextBox" Background="Transparent" BorderThickness="0" FontSize="14" Padding="0,12" VerticalAlignment="Center" Foreground="{StaticResource Gray800}"/>
                        <TextBlock Grid.Column="1" Text="Search commissions..." x:Name="PlaceholderText" Foreground="{StaticResource Gray400}" IsHitTestVisible="False" VerticalAlignment="Center" Margin="0,12"/>
                    </Grid>
                </Border>

                <!-- Logs Button -->
                <Button Grid.Column="1"
        Content="Logs"
        Width="100"
        Height="40"
        Background="{StaticResource PrimaryBlue}"
        Foreground="White"
        FontWeight="SemiBold"
        BorderThickness="0"
        Cursor="Hand"
        Click="LogsButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                    CornerRadius="8"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


            </Grid>

            

            <!-- Header + List -->

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="*"/>
                        <!-- Rows -->
                    </Grid.RowDefinitions>

                    <!-- Header Row -->
                    <Grid Grid.Row="0" Background="{StaticResource Gray50}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="100"/>
                            <ColumnDefinition Width="*" MinWidth="100"/>
                            <ColumnDefinition Width="*" MinWidth="120"/>
                            <ColumnDefinition Width="*" MinWidth="120"/>
                            <ColumnDefinition Width="*" MinWidth="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Commission ID" Style="{StaticResource HeaderTextStyle}" TextAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="Sales ID" Style="{StaticResource HeaderTextStyle}" TextAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Agent ID" Style="{StaticResource HeaderTextStyle}" TextAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="Amount" Style="{StaticResource HeaderTextStyle}" TextAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="Release Date" Style="{StaticResource HeaderTextStyle}" TextAlignment="Center"/>
                    </Grid>

                    <!-- Rows -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White">
                        <ItemsControl x:Name="CommissionsDataGrid">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="{StaticResource Gray100}" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" MinWidth="100"/>
                                                <ColumnDefinition Width="*" MinWidth="100"/>
                                                <ColumnDefinition Width="*" MinWidth="120"/>
                                                <ColumnDefinition Width="*" MinWidth="120"/>
                                                <ColumnDefinition Width="*" MinWidth="100"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding CommissionID}" Style="{StaticResource CellTextStyle}" TextAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding SalesID}" Style="{StaticResource CellTextStyle}" TextAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding AgentID}" Style="{StaticResource CellTextStyle}" TextAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{Binding CommissionAmount}" Style="{StaticResource CellTextStyle}" TextAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="{Binding ReleaseDate}" Style="{StaticResource CellTextStyle}" TextAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>


                <!-- Pagination -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Showing 1-3 of 3 commissions" VerticalAlignment="Center" Foreground="{StaticResource Gray600}" FontSize="12" Margin="0,0,16,0" HorizontalAlignment="Left"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="1" Width="32" Height="32" Background="{StaticResource PrimaryBlue}" Foreground="White" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                </StackPanel>
            </Grid>

            <!-- View Overlay -->
            <Grid x:Name="EditCommissionOverlay" Grid.RowSpan="3" Background="#80000000" Visibility="Collapsed">
                <Border Background="White" CornerRadius="16" Padding="30" Width="480" MaxHeight="700" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="16" ShadowDepth="4" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button Content="✕" Width="32" Height="32" FontSize="14" FontWeight="Bold" Background="#F5F6FA" BorderThickness="0" Foreground="#5C677D" HorizontalAlignment="Right" Cursor="Hand" Click="CloseEditOverlay_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>

                        <StackPanel Grid.Row="0" Margin="0,10,0,20">
                            <TextBlock Text="View Commission" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="Commission details" FontSize="13" Foreground="#6C7A89" Margin="0,5,0,0"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Commission ID" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtCommissionId" Height="40" Padding="10" BorderBrush="#E1E8ED" BorderThickness="1" Background="#F5F6FA" Foreground="#5C677D" IsReadOnly="True" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Sales ID" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtSalesId" Height="40" Padding="10" BorderBrush="#E1E8ED" BorderThickness="1" Background="#F5F6FA" Foreground="#5C677D" IsReadOnly="True" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Agent Name" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtAgentId" Height="40" Padding="10" BorderBrush="#E1E8ED" BorderThickness="1" Background="#F5F6FA" Foreground="#5C677D" IsReadOnly="True" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Commission Amount" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtCommissionAmount" Height="40" Padding="10" BorderBrush="#E1E8ED" BorderThickness="1" Background="#F5F6FA" Foreground="#5C677D" IsReadOnly="True" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Release Date" FontSize="13" FontWeight="SemiBold" Foreground="#5C677D"/>
                                    <TextBox x:Name="TxtReleaseDate" Height="40" Padding="10" BorderBrush="#E1E8ED" BorderThickness="1" Background="#F5F6FA" Foreground="#5C677D" IsReadOnly="True" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Close" Width="90" Height="40" Background="White" BorderBrush="#D0D5DD" BorderThickness="1" Foreground="#344054" Cursor="Hand" Margin="0,0,12,0" Click="CloseEditOverlay_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Page>
