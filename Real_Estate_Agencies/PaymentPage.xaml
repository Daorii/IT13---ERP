<Page x:Class="Real_Estate_Agencies.PaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PaymentPage"
      Background="#F8FAFC">

    <Page.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>

        <!-- Header & Cell -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource Gray600}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Add Button -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E40AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Circular Buttons (Pagination) -->
        <Style x:Key="CircularIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource Gray50}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Gray400}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header: Sale ID + Add Payment -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="SaleIdTextBlock" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="Add Payment" Style="{StaticResource AddButtonStyle}" Click="AddPayment_Click" Margin="16,0,0,0"/>
            </Grid>

            <!-- Payment Table -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Table Header -->
                <Border Background="{StaticResource Gray50}" BorderBrush="{StaticResource Gray200}" BorderThickness="1,1,1,0" CornerRadius="8,8,0,0" Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Payment ID" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="Sale ID" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="2" Text="Payment Type" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="3" Text="Amount" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="4" Text="Payment Date" Style="{StaticResource HeaderTextStyle}"/>
                    </Grid>
                </Border>

                <!-- Payment List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Border BorderBrush="{StaticResource Gray200}" BorderThickness="1,0,1,1" CornerRadius="0,0,8,8">
                        <ItemsControl x:Name="PaymentsDataGrid">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="{StaticResource Gray200}" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding PaymentId}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding SaleId}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding PaymentType}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Amount}" Style="{StaticResource CellTextStyle}"/>
                                            <TextBlock Grid.Column="4" Text="{Binding PaymentDate}" Style="{StaticResource CellTextStyle}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </ScrollViewer>
            </Grid>

            <!-- Pagination -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="PageInfoTextBlock"
                           Text="Showing 1-3 of 3 payments"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource Gray600}"
                           FontSize="12"
                           Margin="0,0,16,0"
                           HorizontalAlignment="Left"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="❮" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0" Click="PrevPageBtn_Click"/>
                    <Button Content="1" Width="32" Height="32" Background="{StaticResource PrimaryBlue}" Foreground="White" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0"/>
                    <Button Content="❯" Width="32" Height="32" Style="{StaticResource CircularIconButtonStyle}" Margin="2,0" Click="NextPageBtn_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Page>
