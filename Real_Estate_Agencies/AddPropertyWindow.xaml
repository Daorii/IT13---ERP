<Window x:Class="Real_Estate_Agencies.Views.AddPropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Property"
        Width="420" Height="630"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <!-- Root Grid -->
    <Grid Background="Transparent">
        
        <!-- Main Card -->
        <Border Background="#FFE9F7FF"
                CornerRadius="16"
                Padding="25"
                BorderBrush="#FFCCE7F5"
                BorderThickness="1"
                SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect Color="LightBlue"
                                  BlurRadius="25"
                                  ShadowDepth="0"
                                  Opacity="0.35"/>
            </Border.Effect>

            <StackPanel>

                <!-- Title -->
                <TextBlock Text="🏠 Add New Property"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF3A4A60"
                           Margin="0,0,0,24"
                           HorizontalAlignment="Center"/>

                <!-- Input Fields -->
                <StackPanel>
                    <TextBlock Text="Name" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtName"
                             Text="{Binding NewProperty.Name, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,5,0,12" Padding="8"
                             Background="White"
                             BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <TextBlock Text="Location" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtLocation"
                             Text="{Binding NewProperty.Location, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,5,0,12" Padding="8"
                             Background="White"
                             BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <TextBlock Text="Type" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtType"
                             Text="{Binding NewProperty.PropertyType, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,5,0,12" Padding="8"
                             Background="White"
                             BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <TextBlock Text="Category" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtCategory"
                             Text="{Binding NewProperty.Category, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,5,0,12" Padding="8"
                             Background="White"
                             BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <TextBlock Text="Price" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtPrice"
                             Text="{Binding NewProperty.Price, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,5,0,12" Padding="8"
                             Background="White"
                             BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <TextBlock Text="Status" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <ComboBox x:Name="StatusComboBox"
                              Margin="0,5,0,12" Padding="8"
                              Background="White"
                              BorderBrush="#FFBFD6E5" BorderThickness="1">
                        <ComboBoxItem Content="On Sale"/>
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Sold"/>
                    </ComboBox>

                    <TextBlock Text="Image" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,12">
                        <TextBox Text="{Binding NewProperty.ImagePath, UpdateSourceTrigger=PropertyChanged}"
                                 Width="200" Padding="8"
                                 Background="White"
                                 BorderBrush="#FFBFD6E5" BorderThickness="1"/>
                        <Button Content="Browse"
                                Width="80" Margin="8,0,0,0"
                                Background="#FFFFE08F"
                                Foreground="#FF2C2C2C"
                                FontWeight="SemiBold"
                                BorderBrush="#FFE6C96D"
                                BorderThickness="1.2"
                                Cursor="Hand"
                                Click="BrowseImage_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Cancel" Width="100" Height="38"
                            Margin="0,0,12,0"
                            Background="#FFE9F7FF"
                            Foreground="#FF2C2C2C"
                            BorderBrush="#FFAACDEB"
                            BorderThickness="1.2"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="Cancel_Click"/>

                    <Button Content="Save" Width="100" Height="38"
                            Background="#FFFFE08F"
                            Foreground="#FF2C2C2C"
                            FontWeight="Bold"
                            BorderBrush="#FFE6C96D"
                            BorderThickness="1.2"
                            Cursor="Hand"
                            Click="Save_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
        <Button Content="✖"
            Width="28" Height="28"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,10,10,0"
            Background="Transparent"
            Foreground="Red"
            FontWeight="Bold"
            BorderThickness="0"
            Cursor="Hand"
            Click="Close_Click"/>
    </Grid>
</Window>
