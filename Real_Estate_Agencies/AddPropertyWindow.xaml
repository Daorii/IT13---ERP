<Window x:Class="Real_Estate_Agencies.Views.AddPropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Real_Estate_Agencies.Views"
        mc:Ignorable="d"
        Title="Add New Property" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Name:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewProperty.Name}" Margin="5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Location:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewProperty.Location}" Margin="5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Type:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NewProperty.PropertyType}" Margin="5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Category:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding NewProperty.Category}" Margin="5"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Price:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding NewProperty.Price}" Margin="5"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Status:" Margin="5" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="5" Grid.Column="1" x:Name="StatusComboBox" Margin="5">
            <ComboBoxItem Content="On Sale"/>
            <ComboBoxItem Content="Pending"/>
            <ComboBoxItem Content="Sold"/>
        </ComboBox>

        <Label Grid.Row="6" Grid.Column="0" Content="Image:" Margin="5" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <TextBox Text="{Binding NewProperty.ImagePath}" Width="200" Margin="0,0,10,0"/>
            <Button Content="Browse" Click="BrowseImage_Click" Width="80"/>
        </StackPanel>

        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Save" 
                    Margin="5,0" 
                    Padding="15,5"
                    Click="Save_Click"/>
            <Button Content="Cancel" 
                    Margin="5,0" 
                    Padding="15,5"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>