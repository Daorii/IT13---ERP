<Window x:Class="Real_Estate_Agencies.Views.AddPropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Property"
        Width="420" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Grid Background="Transparent">

        <!-- Main Card -->
        <Border x:Name="MainCard"
        Background="#FFE9F7FF"
        CornerRadius="16"
        Padding="25"
        BorderBrush="#FFCCE7F5"
        BorderThickness="1"
        SnapsToDevicePixels="True"
        RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
            </Border.RenderTransform>

            <Border.Effect>
                <DropShadowEffect Color="LightBlue"
                                  BlurRadius="25"
                                  ShadowDepth="0"
                                  Opacity="0.35"/>
            </Border.Effect>

            <StackPanel>

                <!-- Title -->
                <TextBlock Text="🏠 Add New Property"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF3A4A60"
                           Margin="0,0,0,24"
                           HorizontalAlignment="Center"/>

                <!-- Input Fields -->
                <StackPanel>
                    <TextBlock Text="Name" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <Border CornerRadius="10" Background="White" BorderBrush="#FFBFD6E5" BorderThickness="1" Margin="0,5,0,12">
                        <TextBox x:Name="TxtName"
                                 Text="{Binding NewProperty.Name, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"/>
                    </Border>

                    <TextBlock Text="Location" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <Border CornerRadius="10" Background="White" BorderBrush="#FFBFD6E5" BorderThickness="1" Margin="0,5,0,12">
                        <TextBox x:Name="TxtLocation"
                                 Text="{Binding NewProperty.Location, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"/>
                    </Border>

                    <TextBlock Text="Category" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <Border CornerRadius="10" Background="White" BorderBrush="#FFBFD6E5" BorderThickness="1" Margin="0,5,0,12">
                        <ComboBox x:Name="CategoryComboBox"
                                  ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Padding="8"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="14"/>
                    </Border>

                    <TextBlock Text="Type" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <Border CornerRadius="10" Background="White" BorderBrush="#FFBFD6E5" BorderThickness="1" Margin="0,5,0,12">
                        <ComboBox x:Name="TypeComboBox"
                                  ItemsSource="{Binding FilteredPropertyTypes}"
                                  SelectedItem="{Binding NewProperty.PropertyType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Padding="8"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="14"/>
                    </Border>

                    <TextBlock Text="Price" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <Border CornerRadius="10" Background="White" BorderBrush="#FFBFD6E5" BorderThickness="1" Margin="0,5,0,12">
                        <TextBox x:Name="TxtPrice"
                                 Text="{Binding NewProperty.Price, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"/>
                    </Border>

                    <TextBlock Text="Status" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <Border CornerRadius="10" Background="White" BorderBrush="#FFBFD6E5" BorderThickness="1" Margin="0,5,0,12">
                        <ComboBox x:Name="StatusComboBox"
                                  Padding="8"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  FontSize="14">
                            <ComboBoxItem Content="Available"/>
                            <ComboBoxItem Content="Pending"/>
                            <ComboBoxItem Content="Sold"/>
                        </ComboBox>
                    </Border>

                    <TextBlock Text="Image" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,12">
                        <Border CornerRadius="10" Background="White" BorderBrush="#FFBFD6E5" BorderThickness="1" Width="200">
                            <TextBox Text="{Binding NewProperty.ImagePath, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="8"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="14"/>
                        </Border>
                        <Button Content="Browse"
                                Width="80" Margin="8,0,0,0"
                                Background="#FFFFE08F"
                                Foreground="#FF2C2C2C"
                                FontWeight="SemiBold"
                                BorderBrush="#FFE6C96D"
                                BorderThickness="1.2"
                                Cursor="Hand"
                                Click="BrowseImage_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Cancel" Width="100" Height="38"
                            Margin="0,0,12,0"
                            Background="White"
                            Foreground="#1E293B"
                            BorderBrush="#CBD5E0"
                            BorderThickness="1"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="Cancel_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Save" Width="100" Height="38"
                            Background="#4F46E5"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Save_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#6366F1"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#4338CA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>

      
    </Grid>
</Window>
