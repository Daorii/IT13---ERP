<Window x:Class="Real_Estate_Agencies.Views.EditPropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Property"
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        Background="#F5F5F0">

    <Window.Resources>
        <Color x:Key="AccentBlue">#4A6FA5</Color>
        <Color x:Key="PrimaryKhaki">#69604C</Color>
        <Color x:Key="BackgroundEggshell">#F5F5F0</Color>
        <Color x:Key="HighlightYellow">#F1C40F</Color>

        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource AccentBlue}"/>
        <SolidColorBrush x:Key="PrimaryKhakiBrush" Color="{StaticResource PrimaryKhaki}"/>
        <SolidColorBrush x:Key="BackgroundEggshellBrush" Color="{StaticResource BackgroundEggshell}"/>
        <SolidColorBrush x:Key="HighlightYellowBrush" Color="{StaticResource HighlightYellow}"/>
        <SolidColorBrush x:Key="BorderLight" Color="#E0E0E0"/>

        <DropShadowEffect x:Key="CardShadowEffect"
                          ShadowDepth="2" Direction="270" 
                          Color="#BBBBBB"
                          Opacity="0.3" BlurRadius="5"/>

        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryKhakiBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryKhakiBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlueBrush}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryKhakiBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                              Grid.Column="2"
                                              Focusable="false"
                                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press"
                                              Background="Transparent"
                                              BorderThickness="0">
                                    <Path x:Name="Arrow"
                                          Fill="{StaticResource PrimaryKhakiBrush}"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                          Margin="0,0,12,0"/>
                                </ToggleButton>
                                <ContentPresenter x:Name="ContentSite"
                                                  IsHitTestVisible="False"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                  Margin="{TemplateBinding Padding}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"/>
                                <TextBox x:Name="PART_EditableTextBox"
                                         Style="{x:Null}"
                                         Template="{DynamicResource ComboBoxTextBox}"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Center"
                                         Margin="{TemplateBinding Padding}"
                                         Focusable="True"
                                         Background="Transparent"
                                         Visibility="Hidden"
                                         IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlueBrush}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#6682B1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryKhakiBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundEggshellBrush}"
            CornerRadius="15" 
            Margin="20"
            Padding="30"
            Effect="{StaticResource CardShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Edit Property" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryKhakiBrush}" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Update property information" 
                           FontSize="14" 
                           Foreground="{StaticResource PrimaryKhakiBrush}" 
                           Opacity="0.7"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Form Fields -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,0,0,20">
                    <!-- Property Name -->
                    <TextBlock Text="Property Name *" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="PropertyNameTextBox" 
                             Style="{StaticResource FormTextBoxStyle}"
                             Margin="0,0,0,20"/>

                    <!-- Property Address -->
                    <TextBlock Text="Property Address *" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="PropertyLocationTextBox" 
                             Style="{StaticResource FormTextBoxStyle}"
                             Margin="0,0,0,20"/>

                    <!-- Property Type -->
                    <TextBlock Text="Property Type *" Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox x:Name="PropertyTypeComboBox" 
                              Style="{StaticResource FormComboBoxStyle}"
                              Margin="0,0,0,20">
                        <ComboBoxItem Content="House"/>
                        <ComboBoxItem Content="Apartment"/>
                        <ComboBoxItem Content="Condo"/>
                        <ComboBoxItem Content="Duplex"/>
                        <ComboBoxItem Content="Villa"/>
                        <ComboBoxItem Content="Office"/>
                        <ComboBoxItem Content="Commercial"/>
                    </ComboBox>

                    <!-- Category -->
                    <TextBlock Text="Category *" Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox x:Name="CategoryComboBox" 
                              Style="{StaticResource FormComboBoxStyle}"
                              Margin="0,0,0,20">
                        <ComboBoxItem Content="Residential"/>
                        <ComboBoxItem Content="Commercial"/>
                        <ComboBoxItem Content="Vacation"/>
                        <ComboBoxItem Content="Investment"/>
                    </ComboBox>

                    <!-- Price -->
                    <TextBlock Text="Price *" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="PriceTextBox" 
                             Style="{StaticResource FormTextBoxStyle}"
                             Margin="0,0,0,20"/>

                    <!-- Status -->
                    <TextBlock Text="Status *" Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox x:Name="StatusComboBox" 
                              Style="{StaticResource FormComboBoxStyle}"
                              Margin="0,0,0,20">
                        <ComboBoxItem Content="On Sale"/>
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Sold"/>
                        <ComboBoxItem Content="Occupied"/>
                        <ComboBoxItem Content="Vacant"/>
                        <ComboBoxItem Content="Under Maintenance"/>
                    </ComboBox>

                    <!-- Image Path -->
                    <TextBlock Text="Image Path" Style="{StaticResource FormLabelStyle}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="ImagePathTextBox" 
                                 Grid.Column="0"
                                 Style="{StaticResource FormTextBoxStyle}"
                                 Margin="0,0,10,0"/>
                        <Button Grid.Column="1"
                                Content="Browse..."
                                Style="{StaticResource CancelButtonStyle}"
                                Click="BrowseImage_Click"
                                Height="40"
                                Padding="15,0"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Content="Cancel"
                        Style="{StaticResource CancelButtonStyle}"
                        Click="Cancel_Click"
                        Margin="0,0,10,0"
                        Width="100"/>

                <Button Grid.Column="2"
                        Content="Update Property"
                        Style="{StaticResource SaveButtonStyle}"
                        Click="Save_Click"
                        Width="140"/>
            </Grid>
        </Grid>
    </Border>
</Window>