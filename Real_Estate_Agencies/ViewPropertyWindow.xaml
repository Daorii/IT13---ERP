<Window x:Class="Real_Estate_Agencies.Views.ViewPropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Property Showcase"
        Height="800" Width="1200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="1000" MinHeight="700"
        FontFamily="Segoe UI"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="DarkBackground" Color="#0F0F23"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1A1A2E"/>
        <SolidColorBrush x:Key="AccentGold" Color="#FFD700"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#4A90E2"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#808080"/>
        <SolidColorBrush x:Key="GlassEffect" Color="#22FFFFFF"/>

        <!-- Glass Card -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource GlassEffect}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.3" BlurRadius="20" ShadowDepth="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentGold}"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Close Button -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Status Badge -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Detail Labels -->
        <Style x:Key="DetailLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="DetailValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F0F23" Offset="0"/>
            <GradientStop Color="#1A1A2E" Offset="0.5"/>
            <GradientStop Color="#16213E" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="30">
        <!-- Close Button -->
        <Button Style="{StaticResource CloseButtonStyle}" 
                Click="Close_Click"
                HorizontalAlignment="Right" VerticalAlignment="Top"/>

        <Border Style="{StaticResource GlassCard}" Padding="40">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,30" HorizontalAlignment="Center">
                    <TextBlock x:Name="PropertyNameDisplay" FontSize="36" FontWeight="Bold"/>
                    <TextBlock x:Name="PropertyLocationDisplay" FontSize="18" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,10"/>
                    <Border x:Name="StatusBadgeContainer" Style="{StaticResource StatusBadge}">
                        <TextBlock x:Name="StatusText" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                    </Border>
                </StackPanel>

                <!-- Main Grid -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Property Image -->
                    <Border Grid.Column="0" CornerRadius="20" ClipToBounds="True" Height="500" Background="#000">
                        <Image x:Name="PropertyImage" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>

                    <!-- Property Details -->
                    <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="0,20,0,0">
                            <StackPanel Margin="0,0,0,25">
                                <TextBlock Text="PROPERTY TYPE" Style="{StaticResource DetailLabel}"/>
                                <TextBlock x:Name="PropertyTypeDisplay" Style="{StaticResource DetailValue}"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,25">
                                <TextBlock Text="CATEGORY" Style="{StaticResource DetailLabel}"/>
                                <TextBlock x:Name="CategoryDisplay" Style="{StaticResource DetailValue}"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,25">
                                <TextBlock Text="PRICE" Style="{StaticResource DetailLabel}"/>
                                <TextBlock x:Name="PriceDisplay" Style="{StaticResource DetailValue}"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,25">
                                <TextBlock Text="PROPERTY NUMBER" Style="{StaticResource DetailLabel}"/>
                                <TextBlock x:Name="PropertyNumberDisplay" Style="{StaticResource DetailValue}"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button Content="Schedule Visit" Style="{StaticResource ModernButton}" Margin="0,0,15,0"/>
                    <Button Content="Save to Favorites" Style="{StaticResource ModernButton}" Background="{StaticResource AccentBlue}" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
