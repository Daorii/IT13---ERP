<Window x:Class="Real_Estate_Agencies.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Client"
        Width="420" Height="570"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Grid Background="Transparent">
        <!-- Main Card -->
        <Border Background="#FFE9F7FF"
                CornerRadius="16"
                Padding="25"
                BorderBrush="#FFCCE7F5"
                BorderThickness="1"
                SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect Color="LightBlue"
                                  BlurRadius="25"
                                  ShadowDepth="0"
                                  Opacity="0.35"/>
            </Border.Effect>

            <StackPanel>
                <!-- Title -->
                <TextBlock Text="👤 Add Client"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF3A4A60"
                           Margin="0,0,0,24"
                           HorizontalAlignment="Center"/>

                <!-- Input Fields -->
                <StackPanel>
                    <!-- Hidden Client ID -->
                    <TextBox x:Name="TxtClientId" Visibility="Collapsed" IsReadOnly="True"/>

                    <TextBlock Text="First Name" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtFirstName"
                             Margin="0,5,0,12" Padding="8"
                             Background="White"
                             BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <TextBlock Text="Last Name" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtLastName"
                             Margin="0,5,0,12" Padding="8"
                             Background="White"
                             BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <TextBlock Text="Contact Info" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtContactInfo"
                             Margin="0,5,0,12" Padding="8"
                             Background="White"
                             BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                    <TextBlock Text="Address" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtAddress"
                             Margin="0,5,0,12" Padding="8"
                             Background="White"
                             BorderBrush="#FFBFD6E5" BorderThickness="1"/>

                 
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Cancel" Width="100" Height="38"
                            Margin="0,0,12,0"
                            Background="#FFE9F7FF"
                            Foreground="#FF2C2C2C"
                            BorderBrush="#FFAACDEB"
                            BorderThickness="1.2"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="Cancel_Click"/>

                    <Button Content="Add" Width="100" Height="38"
                            Background="#FFFFE08F"
                            Foreground="#FF2C2C2C"
                            FontWeight="Bold"
                            BorderBrush="#FFE6C96D"
                            BorderThickness="1.2"
                            Cursor="Hand"
                            Click="Add_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Button Content="✖"
                Width="28" Height="28"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Background="Transparent"
                Foreground="Red"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="Close_Click"/>
    </Grid>
</Window>
