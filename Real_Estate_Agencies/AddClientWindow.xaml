<Window x:Class="Real_Estate_Agencies.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Client"
        Width="450" Height="460"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        Loaded="AddClientWindow_Loaded">

    <Grid Background="Transparent">
        <!-- Main Card -->
        <Border x:Name="MainCard"
                Background="#FFE9F7FF"
                CornerRadius="18"
                Padding="25"
                BorderBrush="#FFCCE7F5"
                BorderThickness="1"
                SnapsToDevicePixels="True"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
            </Border.RenderTransform>
            <Border.Effect>
                <DropShadowEffect Color="LightBlue"
                                  BlurRadius="25"
                                  ShadowDepth="0"
                                  Opacity="0.35"/>
            </Border.Effect>

            <StackPanel>
                <!-- Title -->
                <TextBlock Text="👤 Add Client"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF3A4A60"
                           Margin="0,0,0,24"
                           HorizontalAlignment="Center"/>

                <!-- Input Fields -->
                <StackPanel>
                    <TextBox x:Name="TxtClientId" Visibility="Collapsed" IsReadOnly="True"/>

                    <TextBlock Text="First Name" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtFirstName" Margin="0,5,0,12" Padding="10"
                             Background="White" BorderBrush="#FFBFD6E5"
                             BorderThickness="1" FontSize="14">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Last Name" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtLastName" Margin="0,5,0,12" Padding="10"
                             Background="White" BorderBrush="#FFBFD6E5"
                             BorderThickness="1" FontSize="14">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Contact Info" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtContactInfo" Margin="0,5,0,12" Padding="10"
                             Background="White" BorderBrush="#FFBFD6E5"
                             BorderThickness="1" FontSize="14">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Address" FontWeight="SemiBold" Foreground="#FF4A5568"/>
                    <TextBox x:Name="TxtAddress" Margin="0,5,0,12" Padding="10"
                             Background="White" BorderBrush="#FFBFD6E5"
                             BorderThickness="1" FontSize="14">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <!-- Cancel Button -->
                    <Button Content="Cancel" Width="100" Height="38" Margin="0,0,10,0"
                            Background="#FFE9F7FF" Foreground="#FF2C2C2C"
                            BorderBrush="#FFAACDEB" BorderThickness="1.2"
                            FontWeight="SemiBold" Cursor="Hand"
                            Click="Cancel_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Add Button -->
                    <Button Content="Add" Width="100" Height="38"
                            Background="#FFFFE08F" Foreground="#FF2C2C2C"
                            FontWeight="Bold" BorderBrush="#FFE6C96D"
                            BorderThickness="1.2" Cursor="Hand"
                            Click="Add_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="8" Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
